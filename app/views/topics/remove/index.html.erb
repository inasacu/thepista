<div class="block">

  <%= render :partial => 'secondary_navigation' if current_user %>  

  <div class="content">   
  
    <h2 class="title"><%= get_collection_label(@topics) %></h2>
	
    <div class="inner">
	
      <table class="table">
	  
        <tr>           
          <th class="first">ID</th>
          <th>Forum_id</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @topics.each do |topic| -%>
        <tr>
          <td>
            <%= topic.id %>
          </td>
          <td>
            <%= link_to topic.forum_id, topic_path(topic) %>
          </td>
          <td>
            <%= topic.created_at %>
          </td>
          <td class="last">
            <%= link_to label_name(:show), topic_path(topic) %> |
            <%= link_to label_name(:edit), edit_topic_path(topic) %> |
            <%= link_to label_name(:destroy), topic_path(topic), :method => :delete, :confirm => label_name(:are_you_sure) %>
          </td>
        </tr>          
        <% end -%>

      </table>
	  <%= render :partial => 'shared/action_bar', :locals => { :collection => @user } %>

    </div>

  </div>

</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>