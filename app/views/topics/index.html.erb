<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', topics_path %></li>
      <li><%= link_to 'New', new_topic_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Topics</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>Forum_id</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @topics.each do |topic| -%>
        <tr>
          <td>
            <%= topic.id %>
          </td>
          <td>
            <%= link_to topic.forum_id, topic_path(topic) %>
          </td>
          <td>
            <%= topic.created_at %>
          </td>
          <td class="last">
            <%= link_to 'show', topic_path(topic) %> |
            <%= link_to 'edit', edit_topic_path(topic) %> |
            <%= link_to 'destroy', topic_path(topic), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @topic  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>