<%
	if @schedule
		label = label_name_with('note', h(@schedule.concept))
	end	
	if @practice
		label = label_name_with('note', h(@practice.concept))
	end
%>
<div class="block">

  <%= render :partial => '/schedules/secondary_navigation' if @schedule %>
  <%= render :partial => '/practices/secondary_navigation' if @practice %>

  <div class="content">
	
	<h2 class="title"><%= label %></h2>
	
    <div class="inner">
	
	<%= render :partial => 'posts/posts' %>

	<%= render :partial => 'posts/new', 
		:locals => { :forum_id => @topic.forum_id, :label => label_name(:write_comment), :textfield => false } %>

    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => '/schedules/sidebar_show') if @schedule -%>
<% content_for :sidebar, render(:partial => '/practices/sidebar_show') if @practice -%>
