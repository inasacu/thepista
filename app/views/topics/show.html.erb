<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', topics_path  %></li>
      <li><%= link_to 'New', new_topic_path %></li>
      <li class="active"><%= link_to 'Show', topic_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b>Forum_id:</b>
          <%= @topic.forum_id %>
        </p>

        <p>
          <b>User_id:</b>
          <%= @topic.user_id %>
        </p>

        <p>
          <b>Name:</b>
          <%= @topic.name %>
        </p>

        <p>
          <b>Posts_count:</b>
          <%= @topic.posts_count %>
        </p>
      <%= link_to label_name(:edit), edit_topic_path(@topic) %>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>