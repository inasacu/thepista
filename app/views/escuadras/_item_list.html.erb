<%= stylesheet_link_tag 'item_list' %>

<style type="text/css">
	.table .checkbox {  margin-left: 1px; }
	.table td { padding: 4px; text-align: left; font-size: 12.5px; }
</style>

<iframe class="js">
	<div id="abook-group">
		<div id="abook-wrapper">
			<div class="abook-column-headers">
				<h3 class="filter-header"><%= t(:escuadras_false) %></h3>

				<h3 style="visibility: visible;" class="list-header">
					<%= render :partial => '/shared/check_radio_button' if @cup %>
				</h3>

			</div>
			<div id="filter-list-panel">
				<div id="list-panel" class="abook-column">
					<ul>
						<fieldset id="roster">

							<table class="table">
								<tbody>
									<% 
									first_character = ''
									counter = 0
									@escuadras.each do |escuadra| 

										if (first_character != (escuadra.name.chars.first).upcase)
											first_character = (escuadra.name.chars.first).upcase
											counter = 0
										else
											counter = 1
										end 
										if (counter == 0)
									%>
											<tr>
												<td class="letter-divider">	
													<span class="<%= first_character %>"><%= first_character %></span>
												</td> 
											</tr>
											<% 
										end
										%>	
										<%= render :partial => "item_single", :locals => {:escuadra => escuadra, :checked => false} %>
										<%
									end
									%>		
								</tbody>
							</table>

						</fieldset>
					</ul>
				</div>
			</div>
		</div>
	</div>
</iframe>
