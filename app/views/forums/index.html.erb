<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', forums_path %></li>
      <li><%= link_to 'New', new_forum_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Forums</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>Name</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @forums.each do |forum| -%>
        <tr>
          <td>
            <%= forum.id %>
          </td>
          <td>
            <%= link_to forum.name, forum_path(forum) %>
          </td>
          <td>
            <%= forum.created_at %>
          </td>
          <td class="last">
            <%= link_to 'show', forum_path(forum) %> |
            <%= link_to 'edit', edit_forum_path(forum) %> |
            <%= link_to 'destroy', forum_path(forum), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @forum  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>