<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', forums_path  %></li>
      <li><%= link_to 'New', new_forum_path %></li>
      <li class="active"><%= link_to 'Show', forum_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b>Name:</b>
          <%= @forum.name %>
        </p>

        <p>
          <b>Schedule_id:</b>
          <%= @forum.schedule_id %>
        </p>

        <p>
          <b>Topics_count:</b>
          <%= @forum.topics_count %>
        </p>

        <p>
          <b>Description:</b>
          <%= @forum.description %>
        </p>
      <%= link_to 'Edit', edit_forum_path(@forum) %>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>