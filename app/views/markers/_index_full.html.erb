<h2 class="title"><%= label_name(:markers_list) %></h2>

<div class="inner">
	
	<table class="table">

	  <tr>     
		<%= content_tag :th, "&nbsp;", :class => "first" %>
		<%= content_tag :th, label_name(:name), :class => "heading" %>
		<%= content_tag :th, label_name(:address), :class => "heading" %>
		<%= content_tag :th, "#{label_name(:latitude)}<br/>#{label_name(:longitude)}", :class => "heading" %>
		<%= content_tag :th, "&nbsp;", :class => "last" %>
	  </tr>

	  <% @markers.each do |marker| -%>		
		<%= render 'markers/marker_full', :marker => marker, :display_icons => true %> 
	  <% end -%>

	</table>	
	
	<%= render :partial => 'shared/action_bar', :locals => { :collection => @markers } %>

</div>