<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', markers_path %></li>
      <li><%= link_to 'New', new_marker_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Markers</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>Name</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @markers.each do |marker| -%>
        <tr>
          <td>
            <%= marker.id %>
          </td>
          <td>
            <%= link_to marker.name, marker_path(marker) %>
          </td>
          <td>
            <%= marker.created_at %>
          </td>
          <td class="last">
            <%= link_to 'show', marker_path(marker) %> |
            <%= link_to 'edit', edit_marker_path(marker) %> |
            <%= link_to 'destroy', marker_path(marker), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @marker  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>