<div class="block">

	<%= render :partial => 'secondary_navigation' if current_user %>  

	<div class="content">   

		<h2 class="title"><%= get_collection_label(@markers) %></h2>

		<div class="inner">

			<% if @markers.count > 0 %>

			<table class="table">

				<tr>            
					<th class="first">ID</th>
					<th>Name</th>
					<th>Created at</th>
					<th class="last">&nbsp;</th>
				</tr>
				<% @markers.each do |marker| -%>
				<tr>
					<td>
						<%= marker.id %>
					</td>
					<td>
						<%= link_to marker.name, marker_path(marker) %>
					</td>
					<td>
						<%= marker.created_at %>
					</td>
					<td class="last">
						<%= link_to label_name(:show), marker_path(marker) %> |
						<%= link_to label_name(:edit), edit_marker_path(marker) %> |
						<%= link_to label_name(:destroy), marker_path(marker), :method => :delete, :confirm => label_name(:are_you_sure) %>
					</td>
				</tr>          
				<% end -%>
			</table>

			<% end %>
			<%= render :partial => 'shared/action_bar', :locals => { :collection => @marker } %>

		</div>
	</div>
</div>
<% content_for :sidebar, render(:partial => 'sidebar') -%>