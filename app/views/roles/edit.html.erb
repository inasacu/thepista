<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', roles_path  %></li>
      <li><%= link_to 'New', new_role_path %></li>
      <li class="active"><%= link_to label_name(:edit), edit_role_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">            
    <h2 class="title">Edit Role</h2>
    <div class="inner">
      <% form_for @role, :url => role_path(@role), :html => { :class => :form } do |f| -%>
        <%= render :partial => "form", :locals => {:f => f} %>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>