<%
	the_label = label_name(:roles)
%>

<div class="row">
	<div class="twelve column">   

		<%= set_title_class(the_label, 'role') %>
		

		

			<table>

				<tr>         
					<%= set_content_tag_safe(:th, "&nbsp;", "first") %>
					<%= content_tag :th, label_name(:name), :class => "heading" %>
					<%= content_tag :th, label_name(:created_at), :class => "heading" %>	
					<%= set_content_tag_safe(:th, "&nbsp;", "last") %>
				</tr>
				<% @roles.each do |role| -%>
				<tr>
					<td>
						<%= role.id %>
					</td>
					<td>
						<%= link_to role.name, role_path(role) %>
					</td>
					<td>
						<%= role.created_at %>
					</td>
					<td>
						<%= link_to label_name(:show), role_path(role) %> |
						<%= link_to label_name(:edit), edit_role_path(role) %> |
						<%= link_to label_name(:destroy), role_path(role), :method => :delete, :confirm => label_name(:are_you_sure) %>
					</td>
				</tr>          
				<% end -%>

			</table>
			
		

	</div>

</div>
