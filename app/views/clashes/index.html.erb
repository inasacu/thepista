<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', clashes_path %></li>
      <li><%= link_to 'New', new_clash_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Clashes</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>Name</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @clashes.each do |clash| -%>
        <tr>
          <td>
            <%= clash.id %>
          </td>
          <td>
            <%= link_to clash.name, clash_path(clash) %>
          </td>
          <td>
            <%= clash.created_at %>
          </td>
          <td class="last">
            <%= link_to 'show', clash_path(clash) %> |
            <%= link_to 'edit', edit_clash_path(clash) %> |
            <%= link_to 'destroy', clash_path(clash), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @clash  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>