<div class="block">

  <%= render :partial => '/tournaments/secondary_navigation' %>   

  <div class="content">   
  
    <h2 class="title"><%= get_collection_label(@matches) %></h2>
	
    <div class="inner">
	
      <table class="table">
	  
        <tr>         
          <th class="first">&nbsp;</th>
          <th>Name</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @matches.each do |match| -%>
        <tr>
          <td>
            <%= match.id %>
          </td>
          <td>
            <%= link_to match.name, match_path(match) %>
          </td>
          <td>
            <%= match.created_at %>
          </td>
          <td class="last">
            <%= link_to label_name(:show), match_path(match) %> |
            <%= link_to label_name(:edit), edit_match_path(match) %> |
            <%= link_to label_name(:destroy), match_path(match), :method => :delete, :confirm => label_name(:are_you_sure) %>
          </td>
        </tr>          
		        <% end -%>

		      </table>
			  <%= render :partial => 'shared/action_bar', :locals => { :collection => @match } %>

		    </div>

		  </div>

		</div>

		<% content_for :sidebar, render(:partial => '/schedules/sidebar') -%>