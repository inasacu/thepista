<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', squads_path %></li>
      <li><%= link_to 'New', new_squad_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Squads</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>Name</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @squads.each do |squad| -%>
        <tr>
          <td>
            <%= squad.id %>
          </td>
          <td>
            <%= link_to squad.name, squad_path(squad) %>
          </td>
          <td>
            <%= squad.created_at %>
          </td>
          <td class="last">
            <%= link_to 'show', squad_path(squad) %> |
            <%= link_to 'edit', edit_squad_path(squad) %> |
            <%= link_to 'destroy', squad_path(squad), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @squad  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>