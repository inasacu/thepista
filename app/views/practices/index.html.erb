<div class="block">

  <%= render :partial => 'secondary_navigation' if current_user %>  
          
  <div class="content">  
	        
    <h2 class="title"><%= get_collection_label(@practices) %></h2>

    <div class="inner">
	
	<% if @practices.count > 0 %>
	
      <table class="table">
	
        <tr>             
          <th class="first">ID</th>
          <th>Concept</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
		
        <% @practices.each do |practice| -%>
		
        <tr>
          <td>
            <%= practice.id %>
          </td>
          <td>
            <%= link_to practice.concept, practice_path(practice) %>
          </td>
          <td>
            <%= practice.created_at %>
          </td>

          <td class="last">
            <%= link_to label_name(:show), practice_path(practice) %> |
            <%= link_to label_name(:edit), edit_practice_path(practice) %> |
            <%= link_to label_name(:destroy), practice_path(practice), :method => :delete, :confirm => label_name(:are_you_sure) %>
          </td>
        </tr>   
       
        <% end -%>

      </table>

	<% end %>
	<%= render :partial => 'shared/action_bar', :locals => { :collection => @practice } %>

	</div>
	</div>
</div>
<% content_for :sidebar, render(:partial => 'sidebar') -%>