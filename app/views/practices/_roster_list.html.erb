
<% checked ? checkmark = 'checked' : checkmark = '' %>

<tr class="text game">
	<td class="label">&nbsp;</td>
	<td></td>	
</tr>
<tr class="text game">
	<td class="label"><%= label %>:</td>
	<td>&nbsp;</td>	
</tr>
<tr class="text game">
	<td class="label">&nbsp;</td>
	<td>&nbsp;</td>	
</tr>

<table class="people_table" border="0" cellpadding="0" cellspacing="2" width="100%">
	<tbody>
		<tr>
			<% counter = 0 %>
			<% column = 0
			recipients.each do |recipient| 
				column += 1
				counter += 1
				%>                      

				<% if column > 5 %>
				<% column = 1 %>
			</tr>
			<tr>
				<% end %>

				<td width="22%">	
					<input type="checkbox" id="roster" name="recipient_ids[]" value="<%= recipient.id %>" <%= checkmark %> >
					<%= image_link_small recipient %>
					<br />
					&nbsp;<%= counter %>.&nbsp;
					<%= user_link recipient %>	  
				</td>                    
				<% end %>
			</tr>
		</tbody>
	</table>
	<br/>