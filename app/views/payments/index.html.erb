<%
	the_label = label_name(:payments)
	content_for(:title, the_label)
%>

<div class="block">

  <%= render :partial => '/users/secondary_navigation' if is_action('index') %>
  <%= render :partial => '/groups/secondary_navigation' if is_action('list') %>
          
  <div class="content">  
	        
    <h2 class="title"><%= get_collection_label(@payments) %></h2>

    <div class="inner">
	
	<% if object_counter(@payments) > 0 %>
	
      <table class="table">
	
        <tr>            
          <th class="first">&nbsp;</th>
          <th><%= label_name(:from) %>&nbsp;&nbsp;/&nbsp;&nbsp;<%= label_name(:to) %>&nbsp;&nbsp;/<br />
			  <%= label_name(:created_at) %>
		  </th>
          <th><%= label_name(:concept) %>
          <th><%= label_name(:credit) %></th>
          <th class="last">&nbsp;</th>
        </tr>

		<%= render :partial => 'payment', :collection => @payments %>

		<tr>  
			<td>&nbsp;</td>
			<td>&nbsp;</td>
			<td><%#= "#{label_name(:credit)} #{number_to_currency(@credit_payment.actual_payment)}" %></td>
			<td><%= "#{label_name(:credit)} #{number_to_currency(@debit_payment.actual_payment)}" %></td>
		   <td class="last"></td>
		</tr>			
		
      </table>

	<% end %>
	<%= render :partial => 'shared/action_bar', :locals => { :collection => @payments } %>

	</div>
	</div>
</div>
