<div class="block">

	<h3><%= label_name(:options) %></h3>
	
<ul class="navigation">
<%	
	if current_user.is_member_of?(@group)  %> 
	<li><%= link_to(label_name(:send_message_to), new_message_path(:group_id => @group)) %></li>
	<li><%= link_to(label_name(:invitations_create_group) , new_invitation_url(:group_id => @group)) %></li>
	<li><%= link_to label_name(:send_scorecard), new_message_path(:scorecard_id => @group.schedules.first) unless @group.schedules.blank? %></li>
<% 
	else
%>
	<li><%= link_to(label_name(:send_message_to), new_message_path(:id => @group.all_the_managers.first)) %></li>
<%
	unless current_user.has_group_petition?(current_user, @group)
		the_label = label_with_name('add_to_group', @group.name)
		the_confirmation = "#{ label_name(:petition_to_join) } #{current_user.name} #{ label_name(:to) } #{@group.name}?"
%> 
		<li>
			<%#= link_to(the_label, join_team_path(:id => @group, :teammate => current_user), :confirm => the_confirmation) %>
			<%= link_to(the_label, join_item_path(:id => @group, :item => @group.class.to_s, :teammate => current_user), 
					:confirm => the_confirmation) %>
		</li>
<% 
	end 
end 
%>
</ul>
	
</div>