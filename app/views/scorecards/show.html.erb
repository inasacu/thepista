<% 
	@archive ||= false 
	# @less_games = 5 
	# @games_played = @group.games_played
	scorecards = false
	@scorecards.each {|card| scorecards = true }
	
	the_label = label_name(:scorecard)
	content_for(:title, the_label)
	even_or_odd = true
%>

<div class="block">

<%= get_secondary_navigation %>  

<%
	if scorecards	
%>
<div class="content">   

	<h2 class="title"><%= item_name_link(@group)
 %></h2>

	<div class="inner">

		<%= get_class_table_id_controller %>

			<% if @group.is_futbol? %>
			<%= render :partial => 'scorecard_futbol_label' %>
			<% @scorecards.each do |scorecard| %>
			<%= render :partial => 'scorecard', 
							:locals => {:scorecard => scorecard, :group => @group, :games_played => @games_played, :less_games => @less_games, :even_or_odd => (even_or_odd = !even_or_odd)        } %>
			<% end %>
			<% end %>
			
			<%  if @group.is_basket?  %>
			<% @scorecard_baskets = @scorecards %>
			<%= render :partial => 'scorecard_basket_label' %>
			<%= render :partial => 'scorecard_basket', :collection => @scorecard_baskets, 
							:locals => {:group => @group, :games_played => @games_played, :less_games => @less_games} %>       
			<% end %> 
			
			<% unless @group.is_futbol? or @group.is_basket? %>
			<% @scorecard_others = @scorecards %>
			<%= render :partial => 'scorecard_other_label' %>
			<%= render :partial => 'scorecard_other', :collection => @scorecard_others, 
							:locals => {:group => @group, :games_played => @games_played, :less_games => @less_games} %>       
			<% end %>
			
		</table>
		
	</div>

	</div>
<% 
end 
-%>

</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
<% content_for :sidebar, render(:partial => 'shared/share_object', :locals => {:group => @group}) if @group -%>
<% content_for :sidebar, render(:partial => 'sidebar_show') if @group.is_futbol? -%>
<% content_for :sidebar, render(:partial => 'sidebar_show_basket') if @group.is_basket? -%>





