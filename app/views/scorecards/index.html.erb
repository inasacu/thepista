<% 
	is_cloud = is_controller('cloud')? true : false 
	@archive ||= false 

	the_label = label_name(:scorecards)
	content_for(:title, the_label)
%>

<div class="block">

	<%= render :partial => '/scorecards/secondary_navigation' unless is_cloud %>

	<div class="content">  

		<% if object_counter(@groups) > 0 %>
			<%= render :partial => '/scorecards/index_full' %>
		<% else %>
			<%= render :partial => '/groups/index_blank' %>
		<% end %>

	</div>
</div>
