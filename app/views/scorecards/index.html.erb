<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', scorecards_path %></li>
      <li><%= link_to 'New', new_scorecard_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Scorecards</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>Group_id</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @scorecards.each do |scorecard| -%>
        <tr>
          <td>
            <%= scorecard.id %>
          </td>
          <td>
            <%= link_to scorecard.group_id, scorecard_path(scorecard) %>
          </td>
          <td>
            <%= scorecard.created_at %>
          </td>
          <td class="last">
            <%= link_to 'show', scorecard_path(scorecard) %> |
            <%= link_to 'edit', edit_scorecard_path(scorecard) %> |
            <%= link_to 'destroy', scorecard_path(scorecard), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @scorecard  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>