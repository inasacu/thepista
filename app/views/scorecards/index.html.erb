<div class="block">

  <%= render :partial => 'secondary_navigation' if current_user %>  

  <div class="content">   
  
    <h2 class="title"><%= get_collection_label(@scorecards) %></h2>
	
    <div class="inner">
	
      <table class="table">
	  
        <tr>           
          <th class="first">ID</th>
          <th>Group_id</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @scorecards.each do |scorecard| -%>
        <tr>
          <td>
            <%= scorecard.id %>
          </td>
          <td>
            <%= link_to scorecard.group_id, scorecard_path(scorecard) %>
          </td>
          <td>
            <%= scorecard.created_at %>
          </td>
          <td class="last">
            <%= link_to label_name(:show), scorecard_path(scorecard) %> |
            <%= link_to label_name(:edit), edit_scorecard_path(scorecard) %> |
            <%= link_to label_name(:destroy), scorecard_path(scorecard), :method => :delete, :confirm => label_name(:are_you_sure) %>
          </td>
        </tr>          
		        <% end -%>

		      </table>
			  <%= render :partial => 'shared/action_bar', :locals => { :collection => @user } %>

		    </div>

		  </div>

		</div>

		<% content_for :sidebar, render(:partial => 'sidebar') -%>