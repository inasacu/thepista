
<% 
	new_or_existing = standing.new_record? ? 'new' : 'existing' 
	prefix = "standing[standing_attributes][]" 

	fields_for prefix, standing do |standing_form| 
-%>
	<tr>
		<td class="first"><%= standing.ranking %></td>
		<td><%= standing_form.text_field :group_stage_name, :class => 'text_tiny_score' %></td>
	    <td><%= item_image_link_tiny(standing.item) %></td>
		<td><%= item_name_link(standing.item) %></td>
	    <td class="last" width="600">&nbsp;</td>
	</tr>
<%
	end 
-%>



