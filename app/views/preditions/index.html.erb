<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', preditions_path %></li>
      <li><%= link_to 'New', new_predition_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Preditions</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>Porra_id</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @preditions.each do |predition| -%>
        <tr>
          <td>
            <%= predition.id %>
          </td>
          <td>
            <%= link_to predition.porra_id, predition_path(predition) %>
          </td>
          <td>
            <%= predition.created_at %>
          </td>
          <td class="last">
            <%= link_to 'show', predition_path(predition) %> |
            <%= link_to 'edit', edit_predition_path(predition) %> |
            <%= link_to 'destroy', predition_path(predition), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @predition  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>