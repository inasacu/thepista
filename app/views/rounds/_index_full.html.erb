<h2 class="title"><%= get_collection_label(@rounds) %></h2>

<div class="inner">
	
	<table class="table">

	  <tr>             
	    <th class="first">&nbsp;</th>
	    <th><%= label_name(:name) %></th>
	    <th><%= label_name(:manager) %>&nbsp;/<br />
			  <%= label_name(:sport) %></th>
	    <th><%= label_name(:time_zone) %></th>
	    <th><%= label_name(:general_information) %></th>
	    <th><%= label_name(:round_starts_ends_at) %></th>
	    <th class="last">&nbsp;</th>
	  </tr>

	  <% @rounds.each do |round| -%>

	  <tr>  
			<td>
				<%= round_image_link_small round %>
			</td>

			<td class="name_and_date">
				<%= round_link(round) %>
				<span class="date">
					<%#= nice_day_time round.gameday_at %>
				</span>
			</td>

			<td>
				<%= user_list round.all_the_managers %><br />
				<%= round.sport.name %>
			</td>

			<td>
				<%= round.time_zone %>
			</td>

			<td>
				<%= I18n.t(:has_round_users, :count => object_counter(round.users)) %><br />
				<%#= I18n.t(:has_round_meets, :count => object_counter(round.meets)) %>
			</td>

			<td class="name_and_date">
				<span class="date">
					<%= "#{nice_full_date(round.starts_at)} - #{nice_full_date(round.ends_at)}" %>
				</span>
			</td>

	       <td class="last">
				<span class="action">
					<% if current_user.is_tour_member_of?(round) %>
						<%= link_to(label_name(:send_message_to), new_message_path(:tour_id => round)) %><br />
					<% else %>
						<%= link_to(label_name(:send_message_to), new_message_path(:id => round.all_the_managers.first)) %><br />
				
					<% 	unless current_user.has_round_petition?(current_user, round) 
							the_label = label_with_name('add_to_round', round.name)
							the_confirmation = "#{ label_name(:petition_to_join_round) } #{current_user.name} #{ label_name(:to) } #{round.name}?"
					%> 
							<%= link_to(the_label, join_team_path(:id => round.id, :teammate => current_user.id), :confirm => the_confirmation) %>
					<% 	end 
					   end
					-%>
				
					<% if current_user.is_manager_of?(round) %> 
						<%#= link_to label_name(:meets_create), new_meet_path(:id => round.id)  %><br />
			        <% end %>
					
				</span>
	       </td>
	  </tr>   
 
	  <% end -%>

	</table>	
	
	<%= render :partial => 'shared/action_bar', :locals => { :collection => @rounds } %>

</div>