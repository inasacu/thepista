<%
	cup_create_list = ['cup', 'challenge', 'cast', 'standing']
	is_cup_create = cup_create_list.include?(get_the_controller)
	
	if @cup
		is_official = @cup.official 
	end

	ignore_option = ['venue_show', 'message_index', 'message_show', 'message_new']	
	is_ignore_option = ignore_option.include?(get_controller_action)
	
	discard_controller = ['cup', 'message']
	is_a_dicard = discard_controller.include?(get_the_controller)
%>


<%= set_form_create_image_link(item) unless is_a_dicard %>
<%= set_image_and_link(option_link('invitation'), 'invitation') unless is_ignore_option %>


<%= set_image_and_link(link_to(label_name(:challenges_create), new_challenge_path(:cup_id => @cup)), 'challenge') if is_official %>