<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', matchs_path %></li>
      <li><%= link_to 'New', new_match_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Matches</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>Name</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @matches.each do |match| -%>
        <tr>
          <td>
            <%= match.id %>
          </td>
          <td>
            <%= link_to match.name, match_path(match) %>
          </td>
          <td>
            <%= match.created_at %>
          </td>
          <td class="last">
            <%= link_to label_name(:show), match_path(match) %> |
            <%= link_to label_name(:edit), edit_match_path(match) %> |
            <%= link_to label_name(:destroy), match_path(match), :method => :delete, :confirm => label_name(:are_you_sure) %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @match  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>