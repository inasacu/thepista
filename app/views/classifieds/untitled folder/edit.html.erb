<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', classifieds_path  %></li>
      <li><%= link_to 'New', new_classified_path %></li>
      <li class="active"><%= link_to 'Edit', edit_classified_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">            
    <h2 class="title">Edit Classified</h2>
    <div class="inner">
      <% form_for @classified, :url => classified_path(@classified), :html => { :class => :form } do |f| -%>
        <%= render :partial => "form", :locals => {:f => f} %>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>