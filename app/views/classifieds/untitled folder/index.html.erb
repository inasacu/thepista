<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', classifieds_path %></li>
      <li><%= link_to 'New', new_classified_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Classifieds</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>Message</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @classifieds.each do |classified| -%>
        <tr>
          <td>
            <%= classified.id %>
          </td>
          <td>
            <%= link_to classified.message, classified_path(classified) %>
          </td>
          <td>
            <%= classified.created_at %>
          </td>
          <td class="last">
            <%= link_to 'show', classified_path(classified) %> |
            <%= link_to 'edit', edit_classified_path(classified) %> |
            <%= link_to 'destroy', classified_path(classified), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @classified  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>