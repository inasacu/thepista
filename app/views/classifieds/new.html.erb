<% 
the_group = Group.find(@classified.table_id)
%>
<div class="block">

	<%= get_secondary_navigation(@group) %>

	<div class="content">  

		<h2 class="title"><%= "#{control_action_label} #{label_name('from')} " %><%= group_link(the_group) %></h2>

		<div class="inner">
		
			<%= form_for (@ classified), :url => classifieds_path, :html => { :class => :form } do |f| -%>
			<%= f.hidden_field :table_id %>
			<%= f.hidden_field :table_type %>
			<%= render :partial => "form", :locals => {:f => f} %>
			<% end -%>

		</div>

	</div>

</div>

<% content_for :sidebar, render(:partial => '/groups/sidebar') -%>
