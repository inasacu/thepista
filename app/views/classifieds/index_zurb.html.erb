<div class="block">
	 
    <%= get_secondary_navigation(@group) %>

	<div class="content">   

		<h2 class="title"><%= get_collection_label(@classifieds) %></h2>

		<div class="inner">

			<% if object_counter(@classifieds) > 0 %>

			<table class="table">

			<% @classifieds.each do |classified| %>
			<%= render "classifieds/classified_zurb", :classified => classified, :group => @group %>
			<%- end -%>
			
			</table>

			<% end %>
			<%= render :partial => 'shared/action_bar_zurb', :locals => { :collection => @classified } %>

		</div>
	</div>
</div>

