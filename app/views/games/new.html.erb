<%
	@cup = @game.cup
%>
<div class="block">

	
	<%= render "cups/secondary_navigation", :cup => @cup %>

	<div class="content">  

		<h2 class="title">
			<%= "#{control_action_label} #{label_name('for')} " %>
			<%= item_name_link(@cup) %>
		</h2>

		<div class="inner">
		
	      <% form_for :game, :url => games_path, :html => { :class => :form } do |f| -%>
			<%= f.hidden_field :cup_id if @cup %>
	        <%= render :partial => "form", :locals => {:f => f, :label_name => label_name(:create)} %>
	      <% end -%>

		</div>

	</div>

</div>

