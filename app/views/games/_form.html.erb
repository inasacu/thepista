	<div class="group">

		<div class="column left"> 

			<div class="group">
				<%= f.label :away_ranking, label_name('away_ranking'), :class => :label %>
				<%= f.text_field :away_ranking, :class => 'textscore' %><br/>
				<span class="description"><%= label_name('stages', 'description') %></span>
			</div>

