	<div class="group">

		<div class="column left"> 
			
			<div class="group">
				<%= f.label :home_ranking, label_name('home_ranking'), :class => :label %>
				<%= f.text_field :home_ranking, :class => 'textscore' %><br/>
				<span class="description"><%= label_name('stages', 'description') %></span>
			</div>
			
		</div>
		
		<div class="column right">
			
			<div class="group">			
			<%= f.label :home_stage_name, label_name('home_stage_name'), :class => :label %>
			<%= f.text_field :home_stage_name, :class => 'textscore' %><br/>
			<span class="description"><%= label_name('stages', 'description') %></span>
			</div>
			
		</div>
		
