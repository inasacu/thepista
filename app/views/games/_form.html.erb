    <span class="description"><%= label_name('reminder_at', 'description') %></span>
  </div>

  <div class="group">
    <%= f.label :deadline_at, label_name('deadline_at'), :class => :label %>
    <%= f.datetime_select :deadline_at, :class => 'datetime_select' %><br />
    <span class="description"><%= label_name('deadline_at', 'description') %></span>
  </div>

  </div> 

  <div class="column right"> 

  <div class="group">
    <%= f.label :jornada, label_name('jornada'), :class => :label %>
    <%= f.text_field :jornada, :class => 'textscore' %><br />
    <span class="description"><%= label_name('jornada', 'description') %></span>
  </div>

