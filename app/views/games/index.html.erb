<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', games_path %></li>
      <li><%= link_to 'New', new_game_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Games</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>Starts_at</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @games.each do |game| -%>
        <tr>
          <td>
            <%= game.id %>
          </td>
          <td>
            <%= link_to game.starts_at, game_path(game) %>
          </td>
          <td>
            <%= game.created_at %>
          </td>
          <td class="last">
            <%= link_to 'show', game_path(game) %> |
            <%= link_to 'edit', edit_game_path(game) %> |
            <%= link_to 'destroy', game_path(game), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @game  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>