<% 
display ||= false

if current_user 
	display = current_user.has_group? 
end
%>

<div id="main-navigation">
<ul>		
	<%= "<li />" unless current_user %>
		
	<% if current_user %>
		<li class="<%= get_control_first('home') %>"><%= link_to(label_name(:home) , '/') %></li>
		
		<% if development? %>
			<li class="<%= get_control_active('tournament') %>"><%= link_to(label_name(:tournaments), tournaments_url) %></li>			
		<% end %>
		
		<li class="<%= get_control_active('user') %>"><%= link_to(label_name(:users), users_url) %></li>	
		<li class="<%= get_control_active('group') %>"><%= link_to(label_name(:groups), groups_url) %></li>
				
		<% if display %>	
			<li class="<%= get_control_active('schedule') %><%= get_control_active('topic') %>">
				<%= link_to(label_name(:schedules), schedules_url) %>
			</li>
		<% end %>
	
		<li class="<%= get_control_active('message') %>"><%= link_to(label_name(:messages), messages_url) %></li>
		<li class="<%= get_control_active('scorecard') %>"><%= link_to(label_name(:scorecards), scorecards_url) %></li>
		<li class="<%= get_control_active('marker') %>"><%= link_to(label_name(:markers), markers_url) %></li>
		
		<% if test? %>
			<li class="<%= get_control_active('role') %>"><%= link_to(label_name(:roles), roles_url) %></li>
			<li class="<%= get_control_active('sport') %>"><%= link_to(label_name(:sports), sports_url) %></li>
			<li class="<%= get_control_active('type') %>"><%= link_to(label_name(:type), types_url) %></li>
		<% end %>
	
	<% end %>

</ul>

<div class="clear"></div>

</div>