<%  if DISPLAY_QR_CODE
	the_link = "http://haypista.com#{request.url}"
	@qr = RQRCode::QRCode.new(the_link, :size => 10, :level => :h )
%>
<table class="qr_code">
	<% @qr.modules.each_index do |x| %>
	<tr>  
		<% @qr.modules.each_index do |y| %>
			<% if @qr.dark?(x,y) %>
				<td class="black"/>
			<% else %>
				<td class="white"/>
			<% end %>
		<% end %>
	</tr>
	<% end %>
</table>


<% end -%>

