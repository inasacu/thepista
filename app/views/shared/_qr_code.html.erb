<%
	# the_link = "#{root_url.chop}#{request.request_uri}"
	the_link = "http://haypista.com#{request.request_uri}"
	@qr = RQRCode::QRCode.new(the_link, :size => 10, :level => :h )
%>
<%#= the_link %>
<table class="qr_code">
	<% @qr.modules.each_index do |x| %>
	<tr>  
		<% @qr.modules.each_index do |y| %>
			<% if @qr.dark?(x,y) %>
				<td class="black"/>
			<% else %>
				<td class="white"/>
			<% end %>
		<% end %>
	</tr>
	<% end %>
</table>




		

