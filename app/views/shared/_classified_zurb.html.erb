- unless classified.nil?
- recent ||= false
- the_label = ago(classified.created_at)
- the_classified = classified.concept
- the_classified = "#{classified.concept.strip[0..45]}..." if the_classified.length > 45
- group = Group.find(classified.table_id)
  %tr
    %td.name_and_date
      = image_link_small(group)
      %span.date= group_link(group)
    %td.name_and_date
      %span.date
        = classified_link(classified)
        %br/
        = "&nbsp;&nbsp;[#{the_label}]"
        = classified_image_link(classified)  if current_user.is_manager_of?(group)
