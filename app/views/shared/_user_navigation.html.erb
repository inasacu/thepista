<div id="user-navigation">

    <p>
      <%#= "#{pluralize User.logged_in.count, 'user'} currently logged in" %><br />
    </p>
	
<ul>
	<% if current_user %>
 		<li><%= link_to I18n.t(:profile), edit_user_path(:current) %></li>
		<li><%= user_link current_user %></li>
		<li><a href="#">Settings</a></li>
		<li><%= link_to I18n.t(:logout), logout_path %></li>			
	<% else %>
		<li><%= link_to I18n.t(:signup), signup_path %></li>
		<li><%= link_to I18n.t(:login), login_path %></li>
  <% end -%>

</ul>

<div class="clear"></div>

</div> 