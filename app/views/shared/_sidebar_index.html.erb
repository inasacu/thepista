<% 
	my_groups = []				# my groups
	manager_groups = []			# my manage teams

	current_user.groups.each do |group| 
		my_groups << group
		manager_groups << group if is_current_manager_of(group)
	end
%>

<%= render 'shared/latest_fee_box', :groups => my_groups %>
<%= render 'shared/latest_fee_box', :groups => manager_groups, :is_manager => true %>
