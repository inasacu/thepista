<% display_qr_code = false %>

<% if display_qr_code %>

<%# 
	my_venues = []				# my venues
	manager_venues = []			# my manage teams

	current_user.venues.each do |venue| 
		my_venues << venue
		manager_venues << venue if current_user.is_manager_of?(venue)
	end
%>

<%#= render 'shared/latest_fee_box', :venues => my_venues %>
<%#= render 'shared/latest_fee_box', :venues => manager_venues, :is_manager => true %>
<%
	the_link = "http://haypista.com"
	@qr = RQRCode::QRCode.new(the_link, :size => 10, :level => :h )
%>
<div class="block">
	<%= content_tag 'h3', "Escanea el Codigo con tu movil." %>
	<div class="sidebar-block">
		<p>
			<table class="qr_code">
				<% @qr.modules.each_index do |x| %>
				<tr>  
					<% @qr.modules.each_index do |y| %>
						<% if @qr.dark?(x,y) %>
							<td class="black"/>
						<% else %>
							<td class="white"/>
						<% end %>
					<% end %>
				</tr>
				<% end %>
			</table>
			
		</p>
	</div>
</div>
<% end -%>
