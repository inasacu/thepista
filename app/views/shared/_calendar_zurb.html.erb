<%= render 'utilities/calendar_script' %>
	
<%	
	@first_day = @current_user_zone.at_beginning_of_month
	@last_day = @current_user_zone.at_end_of_month	
	@the_day_of_month = @first_day
		
	the_first_day_of_month = 1	
	the_last_day_of_month = days_in_month(@current_user_zone.month)
	
	@the_items = []
	
	
	@the_schedules = Schedule.get_schedule_first_to_last_month(@first_day, @last_day, current_user)
	the_schedule_day_numbers = []	
	@the_schedules.each { |item| the_schedule_day_numbers << item.starts_at.day ; @the_items << item }
	
	
	@the_reservations = Reservation.get_reservation_first_to_last_month(@first_day, @last_day)
	the_reservation_day_numbers = []	
	@the_reservations.each { |item| the_reservation_day_numbers << item.starts_at.day ; @the_items << item }
				
				
	@the_holidays = Holiday.get_holiday_first_to_last_month(@first_day, @last_day)
	the_holiday_day_numbers = []
	
	
	# @all_timetables = []
	# is_holiday = false	
	# @the_day_of_month = @first_day
	@all_timetables = get_month_timetables(@the_items, @the_holidays, @the_day_of_month, the_first_day_of_month, the_last_day_of_month, @installation)


%>

<%= render 'reservations/calendar_fill_zurb', 
	:the_schedule_day_numbers => the_schedule_day_numbers, :the_reservation_day_numbers => the_reservation_day_numbers,
	:the_holiday_day_numbers => the_holiday_day_numbers %>

