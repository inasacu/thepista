<% 
	has_group, the_cup, the_challenge, the_schedule, the_group, the_users, the_user, the_petition, the_home, the_login, the_signup, the_venue, the_message, the_controller_action , the_controller = get_header_navigation
	is_cup_visible = (Cup.has_official_cup? or the_maximo) and !is_mobile_browser
	is_cup_visible = false
	
	# mobile options
	div_row = "<div class='row'>".html_safe
	div_three_columns = "<div class='three columns'>".html_safe
	div_nine_columns = "<div class='nine columns'>".html_safe
	div_twelve_columns = "<div class='twelve columns'>".html_safe
	div_close = "</div>".html_safe
%>

<div id="zurBar">

	<div class="row">

		<%= is_mobile_browser ? div_twelve_columns : div_three_columns %>
			<%= content_tag(:h1, link_to(app_name, root_url)) %>
		<%= div_close %>


		<%= div_row if is_mobile_browser %>

		<%= is_mobile_browser ? div_twelve_columns : div_nine_columns %>

		<strong class="right">

			<%= link_to(label_name(:home), root_url, :class => the_home) unless is_mobile_browser %>	

			<% if current_user %>
			<%= link_to(label_name(:groups), groups_url, :class => the_group) %>	
			<%= link_to(label_name(:schedules), schedules_url, :class => the_schedule) if has_group %>

			<%= link_to(label_name(:reservations), venues_url, :class => the_venue) %>	
			<%= link_to(label_name(:cups), cups_url, :class => the_cup) if !is_mobile_browser and is_cup_visible %>

			<%= link_to(label_name(:messages), messages_url, :class => the_message) %>
			<%= user_link(current_user.name, current_user, :class => the_user) %>
			<%= link_to(label_name(:logout), logout_path) %>		

			<% else %>
			<%= link_to(label_name(:login), login_path, :class => the_login) %>
			<%= link_to(label_name(:signup), signup_path, :class => the_signup) if DISPLAY_REGISTER %>
			<% end -%>

		</strong>

		<%= div_close %>

		<%= div_close if is_mobile_browser %>


	</div>

</div>

