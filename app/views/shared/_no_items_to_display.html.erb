<%
	the_controller = get_the_controller	
	the_form_create = ""
	schedules ||= false

	if schedules
		if schedules = 0
			the_controller = 'schedule'
			the_form_create = set_form_create_id(Schedule.new, :id, @group, :schedule_create) if is_current_manager_of(@group)
		end
	end

	the_label = label_name("#{the_controller}s_no")
	the_label += " #{the_form_create}".html_safe
%>


<hr />
<%= content_tag :h6, the_label, :class => "subheader" %>
