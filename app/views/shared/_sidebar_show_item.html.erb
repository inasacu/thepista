<div class="block">

<h3><%= label_name(:options) %></h3>

<div class="content">
<% 
	if is_current_member_of(@item) 
%>
		<p><%= option_image_link('message') %>&nbsp;&nbsp;<%= link_to(label_name(:send_message_to), new_message_path(:item_id => @item)) %></p>
		<p><%= link_to("#{label_name(:invitations_create_item)} #{label_name(@item.class.to_s).downcase}", new_invitation_url(:item_id => @item)) %></p>	
<% 
	else
%>
		<p><%= option_image_link('message') %>&nbsp;&nbsp;<%= link_to(label_name(:send_message_to), new_message_path(:id => @item.all_the_managers.first)) %></p>
<%
		unless current_user.has_item_petition?(current_user, @item)			
			unless @item.club
%> 
			<p>
			<%= option_image_link('user_add') %>&nbsp;&nbsp;<%= join_item_link_to(current_user, @item, true) %>
			</p>
<% 
			end
		end 
	end

	if @item.club
		items.each do |item| 
			# the_item = h(item.name)

	 		unless item.is_group_member_of?(@cup)  
%>
	        	<p>
				<%= option_image_link('group_add') %>&nbsp;&nbsp;
				<%= join_item_sub_item_link_to(current_user, @cup, item) %>
				</p>
<% 
			else 
%> 
			<p>
				<%= option_image_link('group_remove') %>&nbsp;&nbsp;
				<%= leave_item_sub_item_link_to(current_user, @cup, item) %>
			</p>
<% 
			end 
%>
	<p>&nbsp;</p>
<%	
		end 
	end
%>

</div>
	
</div>