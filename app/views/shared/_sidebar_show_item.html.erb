<div class="block">

<h3><%= label_name(:options) %></h3>

<ul class="navigation">
<% 
	if current_user.is_member_of?(@item) 
		the_confirmation = label_with_name(:do_leave_item, "#{@item.name}?")
%>
		<li><%= link_to(label_name(:send_message_to), new_message_path(:item_id => @item)) %></li>
		<li><%= link_to("#{label_name(:invitations_create_item)} #{label_name(@item.class.to_s).downcase}", 
						new_invitation_url(:item_id => @item)) %></li>	
<% 
	else
%>
		<li><%= link_to(label_name(:send_message_to), new_message_path(:id => @item.all_the_managers.first)) %></li>
<%
		unless current_user.has_item_petition?(current_user, @item)
			the_item = h(current_user.name)			
			the_label = label_with_name('add_to_group', @item.name) 
			# the_label+= " -   #{label_name(current_user.class.to_s)}: #{the_item}"
			the_confirmation = "#{ label_name(:petition_to_join) } #{current_user.name} #{ label_name(:by) } #{@item.name}?"
%> 
			<li>
			<%= link_to(the_label, join_item_path(:id => @item, 
												  :item => @item.class.to_s, 
												  :teammate => current_user), 
												  :confirm => the_confirmation) unless @item.club %>
			</li>
<% 
		end 
	end

	if @item.club
		items.each do |item| 
			the_item = h(item.name)

	 		unless item.is_group_member_of?(@cup)  
				the_label = label_with_name('add_to_group', @cup.name)
				the_label += " #{label_name(:by)} #{the_item}"
				the_confirmation = "#{ label_name(:petition_to_join)} #{h(@cup.name)} #{ label_name(:by) } #{the_item}?"
%>
	        	<li><%= link_to(the_label, 
						join_item_path(:id => @cup, :item => @cup.class.to_s, :sub_id => item, :sub_item => item.class.to_s, :teammate => current_user), 
						:confirm => the_confirmation) unless Teammate.has_item_petition?(item, @cup) %>
				</li>
<% 
			else 
				the_label = label_with_name('fire_from_item', item.name)
				the_label += " #{label_name(:to)} #{the_item}"
				the_confirmation = "#{ label_name(:fire_from_item)} #{h(@cup.name)} #{ label_name(:by) } #{the_item}?"
%> 
			<li><%= link_to(the_label, 
					leave_item_path(:id => @cup, :item => @cup.class.to_s, :sub_id => item, :sub_item => item.class.to_s, :teammate => current_user), 
					:confirm => the_confirmation) %>
			</li>
<% 
			end 
%>
	<li>&nbsp;</li>
<%	
		end 
	end
%>

</ul>
	
</div>