<%# The activity shouldn't be nil, but we're wearing a belt and suspenders. %>
<%- unless activity.item.nil? -%>

<li>
	
  <p class="activity_detail">
    <!-- <%= feed_icon activity %> -->

    <%- recent ||= false -%>
    <%= feed_message(activity, recent) %>

  </p>
  <p class="meta published clear">
    <%= "#{t(:ago)} #{time_ago_in_words(activity.created_at)}" %> 
     
	<%- if current_user == activity.user -%>
      <%= link_to(image_tag("icons/comment_delete.png",
                             :class => 'actioner'), 
                   activity_path(activity), 
                   :method => :delete, 
                   :confirm => %(Are you sure you want to delete this 
                      activity from your profile?),
                   :title => "Delete this activity") %>
    <%- end -%>              
  </p>
</li>

	
	
	<li class="hentry hreview clear">
		
		<h4>
			<a href="">
				<%= user_link user %> <%= t(:last_logged_at) %>
			 	<%= "#{t(:ago)} #{time_ago_in_words(user.last_logged_at)}" %>
			</a>
		</h4>
		
		<ul class="entry-meta">
			
			<li class="author vcard reviewer clear">						
				<%= link_to image_tag(user.the_avatar, 
							   options={:style => "height: 40px; width: 40px;"}), user_path(user), :class => 'photo', :alt => user.name %>
			</li>
			
			<li>
				<a class="comment" href="">
					80
				</a>
			</li>
			
		</ul>
		
		<blockquote class="entry-content description">
			<p>
				<%= link_to "#{t(:message)} 1234567890123456789012345678..." %>
			</p>
		</blockquote>
		
	</li>
	
	<%- end -%>