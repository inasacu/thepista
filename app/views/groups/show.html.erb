<% 
	is_user_manager = (current_user.is_manager_of?(@group))
%>

<div class="block">

  <%= render :partial => 'secondary_navigation' %>   
  
  <div class="content">
	        
  <h2 class="title"><%= @group.name %></h2>

    <div class="inner">

	<%= render :partial => 'show_thepista' %>

	<p>
	  <b><%#= label_name(:name) %></b>
	  <%= group_show_photo @group %>
	</p>		
	
	<p>
	  <b><%= label_name(:name) %>:</b>
	  <%=h @group.name %>
	</p>

        <p>
          <b><%= label_name(:second_team) %>:</b>
          <%= @group.second_team %>
        </p>

        <p>
          <b><%= label_name(:game_day) %>:</b>
          <%= nice_day_time @group.schedules.first.starts_at %>
        </p>

        <p>
          <b><%= label_name(:description) %>:</b>
          <%= @group.description %>
        </p>

        <p>
          <b><%= label_name(:manager) %>:</b>
          <%= user_list @group.all_the_managers %>
        </p>

        <p>
          <b><%= label_name(:time_zone) %>:</b>
          <%= @group.time_zone %>
        </p>

        <p>
          <b><%= label_name(:sport) %>:</b>
          <%= @group.sport.name %>
        </p>

        <p>
          <b><%= label_name(:marker) %>:</b>
          <%= marker_link @group.marker %>
        </p>

          <p>
            <b><%= label_name(:users) %>:</b>
            <%= t(:has_group_users, :count => @group.users.count) %>
          </p>
      
        <p>
          <b><%= label_name(:schedules) %>:</b>
          <%= t(:has_group_schedules, :count => @group.schedules.count) %>
        </p>

        <p>
          <b><%= label_name(:points_for_win) %>:</b>
          <%= @group.points_for_win %>
        </p>

        <p>
          <b><%= label_name(:points_for_draw) %>:</b>
          <%= @group.points_for_draw %>
        </p>

        <p>
          <b><%= label_name(:points_for_lose) %>:</b>
          <%= @group.points_for_lose %>
        </p>

        <p>
          <b><%= label_name(:conditions) %>:</b>
          <%= @group.conditions %>
        </p>

        <p>
          <b><%= label_name(:player_limit) %>:</b>
          <%= @group.player_limit %>
        </p>

	    <% if current_user.is_member_of?(@group) and !@group.available_users.empty? %>
	      <p>
	        <b><%= label_name(:users_available) %>:</b>
	        <%= user_list @group.available_users %>
	      </p>
	    <% end %>

<% 
	the_label = h(label_name(@group.available, 'value'))
	the_confirmation = label_with_name('set_available', "#{@group.name}?") 
%>
	<p>
	  <b><%= label_name(:available) %>:</b>
		<%= is_user_manager ? link_to(the_label, set_group_available_path(:id => @group.id), :confirm => the_confirmation) : the_label %>
	</p>
			
<% 
	the_label = h(label_name(@group.enable_comments, 'value'))
	the_confirmation = label_with_name('enable_comments', "#{@group.name}?") 
%>
	<p>
	  <b><%= label_name(:enable_comments) %>:</b>
		<%= is_user_manager ? link_to(the_label, set_group_enable_comments_path(:id => @group.id), :confirm => the_confirmation) : the_label %>
	</p>
			 
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar_show') -%>