<div class="block">

<h3><%= label_name(:options) %></h3>

<div class="content">
<% 
	if current_user.is_member_of?(@group) 
		the_confirmation = label_with_name(:do_leave_item, "#{@group.name}?")
%>
		<p><%= option_image_link('message') %>&nbsp;&nbsp;<%= link_to(label_name(:send_message_to), new_message_path(:group_id => @group)) %></p>
		<p><%= option_image_link('invitation') %>&nbsp;&nbsp;<%= link_to(label_name(:invitations_create_group) , new_invitation_url(:group_id => @group)) %></p>
<% 
		unless @group.schedules.blank? 
%>	
			<p><%= option_image_link('scorecard') %>&nbsp;&nbsp;<%= link_to label_name(:send_scorecard), new_message_path(:scorecard_id => @group.schedules.first) %></p>
<% 
		end
	else
%>
		<p><%= option_image_link('message') %>&nbsp;&nbsp;<%= link_to(label_name(:send_message_to), new_message_path(:id => @group.all_the_managers.first)) %></p>
<%
		unless current_user.has_item_petition?(current_user, @group)
%> 
			<p><%= option_image_link('user_add') %>&nbsp;&nbsp;<%= join_item_link_to(current_user, @group, true) %></p>
<% 
		end 
	end
%>
</div>

</div>