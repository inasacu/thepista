<%
	the_label = label_name(:groups)
	content_for(:title, the_label)
%>

<div class="block">
	
	<%= get_secondary_navigation(Group.new) %>
	 
	<div class="content">  
			<% if object_counter(@groups) > 0 %>
				<%= render :partial => '/groups/index_full' %>
			<% else %>
				<%= render :partial => '/groups/index_blank' %>
			<% end %>
	</div>	
</div>

<% content_for :search, render(:partial => 'shared/search') -%>
<% content_for :sidebar, render(:partial => 'groups/sidebar') -%>
<% content_for :sidebar, render(:partial => '/groups/sidebar_legend') if is_action('list') -%>