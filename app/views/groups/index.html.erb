<div class="block">

  <%= render :partial => 'secondary_navigation' if current_user %>  
          
  <div class="content">  
	        
    <h2 class="title"><%= get_collection_label(@groups) %></h2>

    <div class="inner">
	
	<% if @groups.count > 0 %>
	
      <table class="table">
	
        <tr>             
          <th class="first">&nbsp;</th>
          <th><%= label_name(:name) %>&nbsp;/<br />
			  <%= label_name(:gameday_at) %></th>
          <th><%= label_name(:manager) %>&nbsp;/<br />
			  <%= label_name(:sport) %></th>
          <th><%= label_name(:time_zone) %></th>
          <th><%= label_name(:general_information) %></th>
          <th><%= label_name(:created_at) %></th>
          <th class="last">&nbsp;</th>
        </tr>

        <% @groups.each do |group| -%>

        <tr>  
		  <td>
			<%= group_image_link_small group %>
		  </td>
		  
		  <td>
			<%= group_link group %><br />
			<%= nice_day_time group.gameday_at %>
		  </td>
		
		  <td>
			<%= user_list group.all_the_managers %><br />
			<%= group.sport.name %>
		  </td>

			  <td>
				<%= group.time_zone %>
			  </td>
                
          <td>
			<%= I18n.t(:has_group_users, :count => group.users.count) %><br />
			<%= I18n.t(:has_group_schedules, :count => group.schedules.count) %>
          </td>

          <td>
            <%= nice_full_date group.created_at %>
          </td>

          <td class="last">
            <%= link_to label_name(:send_message), group_path(group) %><br />
            <%#= link_to label_name(:invitation_to_group), edit_group_path(group) %> 

			<% if current_user.is_manager_of?(group) %> 
				<%= link_to label_name(:create_schedule), new_schedule_path(:id => group.id)  %>                       
	          	<%#= link_to(label_name(:edit_group), edit_group_path(collection))  %>                  
	          	<%#= link_to(label_name (:destroy_group), 'groups', collection.id) if group.has_schedule?(collection) %>
	        <% end %>
          </td>
        </tr>   
       
        <% end -%>

      </table>

	<% end %>
	<%= render :partial => 'shared/action_bar', :locals => { :collection => @groups } %>

	</div>
	</div>
</div>
<% content_for :sidebar, render(:partial => 'sidebar') -%>