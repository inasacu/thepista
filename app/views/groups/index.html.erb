<div class="block">

  <%= render :partial => 'secondary_navigation' if current_user %>  
          
  <div class="content">  
	        
    <h2 class="title"><%= get_collection_label(@groups) %></h2>

    <div class="inner">
	
	<%#= render :partial => 'sub_index' -%>
	
	<% if @groups.count > 0 %>
	
      <table class="table">
	
        <tr>             
          <th class="first">&nbsp;</th>
          <th><%= I18n.t(:name) %></th>
          <th><%= I18n.t(:manager) %></th>
          <th><%= I18n.t(:time_zone) %></th>
          <th><%= I18n.t(:general_information) %></th>
          <th><%= I18n.t(:gameday_at) %></th>
          <th class="last">&nbsp;</th>
        </tr>

        <% @groups.each do |group| -%>

        <tr>  
		  <td>
			<%= group_image_link_small group %>
		  </td>
		  
		  <td>
			<%= user_link group %><br />
			<%= group.sport.name %>
		  </td>
		
		  <td>
			<%= user_list group.all_the_managers %>
		  </td>

			  <td>
				<%= group.time_zone %>
			  </td>
                
          <td>
			<%= I18n.t(:has_group_users, :count => group.users.count) %><br />
			<%= I18n.t(:has_group_schedules, :count => group.schedules.count) %>
          </td>

          <td>
            <%= nice_day_time(group.gameday_at) %>
          </td>

          <td class="last">
            <%= link_to label_name(:send_message), group_path(group) %><br />
            <%= link_to "label_name(:invitation)", edit_group_path(group) %> 
          </td>
        </tr>   
       
        <% end -%>

      </table>

	<% end %>
	<%= render :partial => 'shared/action_bar', :locals => { :collection => @groups } %>

	</div>
	</div>
</div>
<% content_for :sidebar, render(:partial => 'sidebar') -%>