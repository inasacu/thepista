<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', groups_path %></li>
      <li><%= link_to 'New', new_group_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Groups</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>Name</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @groups.each do |group| -%>
        <tr>
          <td>
            <%= group.id %>
          </td>
          <td>
            <%= link_to group.name, group_path(group) %>
          </td>
          <td>
            <%= group.created_at %>
          </td>
          <td class="last">
            <%= link_to 'show', group_path(group) %> |
            <%= link_to 'edit', edit_group_path(group) %> |
            <%= link_to 'destroy', group_path(group), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @group  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>