<div class="block">

  <%= render :partial => 'secondary_navigation' if current_user %>  
          
  <div class="content">  
	        
    <h2 class="title"><%= get_collection_label(@groups) %></h2>

    <div class="inner">
	
	<% if @groups.count > 0 %>
	
      <table class="table">
	
        <tr>             
          <th class="first">ID</th>
          <th>Name</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>

        <% @groups.each do |group| -%>

        <tr>
          <td>
            <%= group.id %>
          </td>
          <td>
            <%= link_to group.name, group_path(group) %>
          </td>
          <td>
            <%= group.created_at %>
          </td>

          <td class="last">
            <%= link_to label_name(:show), group_path(group) %> |
            <%= link_to label_name(:edit), edit_group_path(group) %> |
            <%= link_to label_name(:destroy), group_path(group), :method => :delete, :confirm => label_name(:are_you_sure) %>
          </td>
        </tr>   
       
        <% end -%>

      </table>

	<% end %>
	<%= render :partial => 'shared/action_bar', :locals => { :collection => @group } %>

	</div>
	</div>
</div>
<% content_for :sidebar, render(:partial => 'sidebar') -%>