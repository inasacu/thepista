<div class="block">

  <%= render :partial => 'secondary_navigation' %>  

  <div class="content">   
  
    <h2 class="title"><%= get_collection_label(@types) %></h2>
	
    <div class="inner">
	
      <table class="table">
	  
        <tr>            
          <th class="first">&nbsp;</th>
          <th>Name</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @types.each do |type| -%>
        <tr>
          <td>
            <%= type.id %>
          </td>
          <td>
            <%= link_to type.name, type_path(type) %>
          </td>
          <td>
            <%= type.created_at %>
          </td>
          <td class="last">
            <%= link_to label_name(:show), type_path(type) %> |
            <%= link_to label_name(:edit), edit_type_path(type) %> |
            <%= link_to label_name(:destroy), type_path(type), :method => :delete, :confirm => label_name(:are_you_sure) %>
          </td>
        </tr>          
        <% end -%>

      </table>
	  <%= render :partial => 'shared/action_bar', :locals => { :collection => @user } %>

    </div>

  </div>

</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>