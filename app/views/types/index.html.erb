<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', types_path %></li>
      <li><%= link_to 'New', new_type_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Types</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>Name</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @types.each do |type| -%>
        <tr>
          <td>
            <%= type.id %>
          </td>
          <td>
            <%= link_to type.name, type_path(type) %>
          </td>
          <td>
            <%= type.created_at %>
          </td>
          <td class="last">
            <%= link_to label_name(:show), type_path(type) %> |
            <%= link_to label_name(:edit), edit_type_path(type) %> |
            <%= link_to label_name(:destroy), type_path(type), :method => :delete, :confirm => label_name(:are_you_sure) %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @type  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>