<%
	the_label = label_name(:types)
	content_for(:title, the_label)
%>

<div class="row">

  <%= get_secondary_navigation %>  

  <div class="twelve column">   
  
    <h2 class="title"><%= get_collection_label(@types) %></h2>
	
    <div class="inner">
	
      <table>
	  
        <tr>            
			<%= set_content_tag_safe(:th, "&nbsp;", "first") %>
			<%= content_tag :th, label_name(:name), :class => "heading" %>
			<%= content_tag :th, label_name(:create_at), :class => "heading" %>	
			<%= set_content_tag_safe(:th, "&nbsp;", "last") %>
        </tr>
        <% @types.each do |type| -%>
        <tr>
          <td>
            <%= type.id %>
          </td>
          <td>
            <%= link_to type.name, type_path(type) %>
          </td>
          <td>
            <%= type.created_at %>
          </td>
          <td>
            <%= link_to label_name(:show), type_path(type) %> |
            <%= link_to label_name(:edit), edit_type_path(type) %> |
            <%= link_to label_name(:destroy), type_path(type), :method => :delete, :confirm => label_name(:are_you_sure) %>
          </td>
        </tr>          
        <% end -%>

      </table>
	  <%= render :partial => 'shared/action_bar', :locals => { :collection => @user } %>

    </div>

  </div>

</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>