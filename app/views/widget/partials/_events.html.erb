
<div class="row" style="margin-top:30px">
	<div class="twelve columns">
		
		<%if !@schedulesPerWeekDay.nil? and @schedulesPerWeekDay.any?%>
		
		<table>

		<%@schedulesPerWeekDay.each do |index, weekdaySchedules|%>
			<tr class="week_day_parent">
				<td>
					<%= "(#{weekdaySchedules.length}) #{index}"%>
					<a href="#" class="toogle_day_view_link">toggle</a>
				</td>
			</tr>
			
			<%if weekdaySchedules.any?%>
			<tr class="week_day_detail">
				<td>
					<table>
						<tbody>
							<%weekdaySchedules.each do |schedule|%>

							<tr>
								<td>
									<%if schedule.ismock %>
									
									<%=schedule.name%>
									
									<%else%>
									
										<%=link_to(sanitize(limit_url_length(schedule.name, 25)), team_roster_path(:id => schedule))%>
									<%end%>
									
									<br>
									<%=set_content_tag_safe('span', "#{get_missing_detail(schedule)}", 'date')%>
								</td>
								
								<td class="name_and_date">
									<%=schedule.group.name%>
									<br>
									<span class="date"><%=schedule.sport.name%></span>
								</td>
								
								<td class="name_and_date">
									<%=nice_day_time_wo_year_exact(schedule.starts_at)%>
									<br>
									<span class="date"><%=get_installation_name(schedule)%></span>
								</td>
								
								<td>
									<%if current_user%>
									
								   
									
									<%else%>
									
									<a href="#" data-ismock="<%=schedule.id.nil?%>" data-event="<%=schedule.id%>"
									   data-isevent="true" class="auth_popup">Apuntate</a>
									
									<%end%>
								</td>
								
							</tr>

							<%end # iterate over events of the day%>
						</tbody>
					</table>
				</td>
			</tr>
			<%end # if there is events for this day%>
			
		<%end # Iterates over map of events%>

		</table>
		
		
		<%else%>
		
		<p>No hay eventos que mostrar</p>
		
		<%end # if the map of events could not be obtained%>
		
		
	</div>
</div>