
<div class="row" style="margin-top:30px">
	<div class="twelve columns">
		
		<%if !@schedules_per_weekday.nil? and @schedules_per_weekday.any?%>
		
		<table>

		<%@schedules_per_weekday.each do |index, weekday_schedules|%>
			<tr class="week_day_parent">
				<td>
					<%= "(#{weekday_schedules.length}) #{index}"%>
					<a href="#" class="toogle_day_view_link">toggle</a>
				</td>
			</tr>
			
			<%if weekday_schedules.any?%>
			<tr class="week_day_detail">
				<td>
					<table>
						<tbody>
							<%weekday_schedules.each do |schedule|%>

							<tr>
								<td>
									<%if schedule.ismock %>
									
									<%=schedule.name%>
									
									<%else%>
									
									<%=link_to(sanitize(limit_url_length(schedule.name, 25)), 
									   widget_event_details_path(:event_id => schedule))%>
									
									<%end%>
									
									<br>
									<%=set_content_tag_safe('span', "#{get_missing_detail(schedule)}", 'date')%>
								</td>
								
								<td class="name_and_date">
									<%=schedule.group.name%>
									<br>
									<span class="date"><%=schedule.sport.name%></span>
								</td>
								
								<td class="name_and_date">
									<%=nice_day_time_wo_year_exact(schedule.starts_at)%>
									<br>
									<span class="date"><%=get_installation_name(schedule)%></span>
								</td>
								
								<td>
									<%= get_event_options(schedule) %>
								</td>
								
							</tr>

							<%end # iterate over events of the day%>
						</tbody>
					</table>
				</td>
			</tr>
			<%end # if there is events for this day%>
			
		<%end # Iterates over map of events%>

		</table>
		
		
		<%else%>
		
		<p>No hay eventos que mostrar</p>
		
		<%end # if the map of events could not be obtained%>
		
		
	</div>
</div>