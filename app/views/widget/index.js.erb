window.onload = function(){
	
	
	script = "<script>function receiveSize(e){if (e.origin === '<%=ENV['THE_HOST']%>')document.getElementById('haypistawidget').style.height = e.data + 'px';} window.addEventListener('message', receiveSize, false);<\/script>";
		
	$("#haypistawidget").append(script);
		
	document.getElementById('haypistawidget').innerHTML = "<%= 
		escape_javascript(content_tag(:iframe, '', 
		:src => "#{ENV['THE_HOST']}/widget/home", 
		:width => '800',
		:scrolling => 'no',
		:style => 'border:none;height:100%').html_safe) 
		%>";
		
};

