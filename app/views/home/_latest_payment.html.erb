<%- 
@debit_payment = Payment.debit_payment(current_user)
@credit_payment = Payment.credit_payment(current_user)

@groups = []
current_user.groups.each do |group|
  @groups << group.id 
end

@debit_fee = Fee.debit_amount(current_user, @groups)

-%>

<% if (@debit_fee.debit_amount.to_f - @debit_payment.actual_payment.to_f) == 0 %>

<div class="block"> 
  <div class="sidebar-block"> 
	<h4><%= "#{label_name(:fees)} / #{label_name(:payments)}" %></h4> 
	
	<table class="table">		
	
		<tr>
		  <!-- <td class="name_and_date">
			<%#= image_link_small activity.user %>
				<span class="date"><%#= user_link_limit activity.user %></span>
		  </td> -->

			<td class="name_and_date">
				<span class="date">
					<td align="left">
						<%= "#{label_name(:debit_total)}:  #{number_to_currency(@debit_fee.debit_amount.to_f)}" %>
					</td>
					<td align="left"><%= @debit_payment.actual_payment %>
						<%= "#{label_name(:credit_total)}:  #{number_to_currency(@debit_payment.actual_payment.to_f)}" %>
					</td>
				</span>
			</td>
			</tr>

	</table>
		
  </div> 
</div>
<% end %>


