<%  
	the_label = label_name(:classifieds)
	content_for(:title, the_label)
%> 

<div class="row">
	<div class="twelve column">   

		<%= set_title_class(the_label, 'classified') %>

		

			<table>

			<% @classifieds.each do |classified| 
				
				case classified.item_type
				when "Group"
					group = classified.item
				end

				
				%>
				<%= render "classifieds/classified_zurb", :classified => classified, :group => group %>  
			<%- end -%>
			
			</table>

			

		
	</div>
</div>

