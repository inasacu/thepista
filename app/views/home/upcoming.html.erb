<%  
	has_schedule ||= false	
	has_schedule = true unless upcoming_schedules.empty? 

	has_game ||= false	
	has_game = true unless upcoming_games.empty?

	has_cup ||= false	
	has_cup = true unless upcoming_cups.empty?
	
	the_label = label_name(:upcoming_schedules)
	content_for(:title, the_label)
%> 

<div class="block">

  <%= render :partial => 'secondary_navigation' %>   
  
  <div class="content">   
  
 	<%= show_heading(the_label) %>

    <div class="inner">

	<%= render :partial => "upcoming_cup", :locals => {:upcoming_cups => @upcoming_cups} if has_cup %>

    </div>
	
    <div class="inner">

	<%= render :partial => "upcoming_schedule", :locals => {:upcoming_schedules => @upcoming_schedules} if has_schedule %>
	
    </div>

    <div class="inner">

	<%= render :partial => "upcoming_game", :locals => {:upcoming_games => @upcoming_games} if has_game %>
	
    </div>

  </div> 
</div>

<% content_for :sidebar, render(:partial => '/shared/sidebar_index') -%>






