<div class="secondary-navigation">

<ul>
	<li class="<%= get_first_active %>"><%= link_to(label_name(:home) , '/') %></li>
<% 
if current_user 
%>
	<li class="<%= get_active('home_upcoming') %>">
		<%= link_to label_name(:upcoming) , :controller => 'home', :action => 'upcoming' unless upcoming_schedules.empty? %>
	</li>

	<li class="message">
		<% unread_count = current_user.unread_messages_count %>
		<%= link_to "#{label_name(:messages_inbox)} (#{unread_count})" , :controller => 'messages', :action => 'index' if unread_count > 0 %>
	</li>
			
	<% if current_user.has_pending_petition?(current_user) %>
	<li class="petition">
		<%= link_to(label_name(:petitions), petition_path(:id => current_user)) %>
	</li>	
	<% end %>			
<% 
end 
%>
</ul>

