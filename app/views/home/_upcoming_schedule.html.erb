<table class="table">

<% upcoming_schedules.each do |schedule| 
	the_sport = "#{label_name(:rosters)}:  #{schedule.convocados.count}"
	the_missing = "#{label_name(:missing)}:  #{schedule.player_limit.to_i - schedule.convocados.count}"
	-%>		
	<tr>
		<td>
			<%= current_user.is_member_of?(schedule.group) ? schedule_image_link_small(schedule) : schedule_image_small(schedule) %>
		</td>

		<td>
			<%= current_user.is_member_of?(schedule.group) ? 
						link_to(sanitize(schedule.concept), team_roster_path(:id => schedule)) : sanitize(schedule.concept) %>
		</td>

		<td>
			<%= group_link schedule.group %><br />
			<%= schedule.group.sport.name %>
		</td>

		<td>
			<%= nice_day_of_week(schedule.starts_at) %><br />
			<%= "#{label_name(:has_left)} #{time_ago_in_words(schedule.starts_at)}" %>
		</td>
		
	
		<td>
			<%= the_sport %><br />
			<%= the_missing %>
		</td>
		
		<td>
			<%= content_tag :td, marker_link(schedule.group.marker), :class => get_the_action %>
		</td>
		
		<td class="last">
			&nbsp;
		</td>

	</tr>
	<% end -%>

</table> 






