<table class="table">

<% upcoming_schedules.each do |schedule| 
	the_sport = "#{label_name(:rosters)}:  #{schedule.convocados.count}"
	-%>		
	<tr>
		<td>
			<%= current_user.is_member_of?(schedule.group) ? schedule_image_link_small(schedule) : schedule_image_small(schedule) %>
		</td>

		<td>
			<%= current_user.is_member_of?(schedule.group) ? 
						link_to(sanitize(schedule.concept), team_roster_path(:id => schedule)) : sanitize(schedule.concept) %>
		</td>

		<td>
			<%= group_link schedule.group %><br />
			<%= label_name(:group) %>
		</td>

		<td>
			<%= nice_day_of_week(schedule.starts_at) %> 
		</td>
		
	
		<td>
			<%= the_sport %>
		</td>
		
		<td>
			<%= "#{label_name(:schedule_rate)}  #{ratings_for(schedule, :dimension => :performance)}" if current_user.is_member_of?(schedule.group) %>
		</td>
		
		<td class="last">
			<%#= the_sport %>
		</td>

	</tr>
	<% end -%>

</table> 






