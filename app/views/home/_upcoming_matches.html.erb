<%	request_image, first_icon, request_link, the_label, the_icon, item_group_link, item_group_link, the_match = upcoming_matches(matches) %>	

<tr>
	<td class="first_home">
		<%= request_image %>
	</td>
	<td class="name_and_date">
		<%= first_icon %> <%= request_link %> <%= "#{the_label.downcase}." %>
		<span class="date">
			<%= the_icon %>&nbsp;&nbsp;<%= ago(the_match.created_at) %>
			
			<% unless item_group_link == "" %>
				&nbsp;&nbsp;<%= "&nbsp;&nbsp;#{item_group_link}" %>
			<% end -%>
				
		</span>
	</td>
	<td>&nbsp;</td>
	<td>&nbsp;</td>			  
	<td class="last">&nbsp;</td>	

</tr>






