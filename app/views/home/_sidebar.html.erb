<%
	show_schedules = !((@upcoming_schedules.nil? or @upcoming_schedules.blank?))
	show_howto = !(is_action('search'))
	show_completeness = !((current_user.percent_complete == 100) or is_action('search'))
%>

<%= set_sidebar(render('/shared/sidebar_howto')) if show_howto -%>
<%= set_sidebar(render('shared/sidebar_schedules', :upcoming_schedules => @upcoming_schedules)) if show_schedules %>
<%= set_sidebar(render('/shared/sidebar_gmap')) -%>
<%= set_sidebar(render('/shared/sidebar_qr_code')) -%>
<%= set_sidebar(render('/shared/sidebar_index')) -%>
<%= set_sidebar(render('shared/completeness', :user => current_user)) if show_completeness -%>



