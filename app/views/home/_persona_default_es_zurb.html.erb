	the_header_label_3 = "3. ¿Que hace HayPista con los datos personales mios de #{label_name(:persona_services_list)}?"
	the_label_3 = "Solo necesitamos tu cuenta de correo con #{label_name(:persona_services_list)} para darte acceso a HayPista.  No accedemos a ninguna otra información."
	

	the_header_label_4 = "4. ¿Tiene HayPista acceso a mi usuario y contraseña de #{label_name(:persona_services_list)}?"
