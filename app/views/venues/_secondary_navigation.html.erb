<% 		
	get_first_active ||=""
	get_first_active = get_active("#{get_the_controller}_#{get_the_action}") if is_controller('venue') and is_action('index') 
	is_not_new_item = !is_action('new')
	
	the_label = "" 
	the_action = ['show','edit', 'team list', 'installation list', 'reservation list']
	the_controller = ['forum', 'installation', 'reservation', 'fee', 'payment']
	
	unless is_action('new')
		content_for(:description, "#{h(@venue.name)},  #{h(@venue.description) }.  #{@venue.marker.name}, #{@venue.time_zone}") if @venue
	end
%>

<div class="secondary-navigation">
	
<ul>
	<%= item_new(@venue) %>		
	
	<li class="<%= get_first_active %>"><%=  link_to(label_name(:all_venue), venues_path) unless @venue %></li>
	<li class="<%= get_active('venue_show') %>"><%=  item_name_link(@venue) if @venue and is_not_new_item %></li>
<% 	
	if the_action.include?(get_the_action) or the_controller.include?(get_the_controller)
		# if current_user.is_member_of?(@venue) 
			the_blog = Blog.find_item(@venue)
%>		
		<li class="<%= get_active('blog_show') %>"><%=  blog_link(the_blog) %></li>
		<li class="<%= get_active('installation_index') %>"><%=  link_to(label_name(:installations) , installations_path(:id => @venue)) %></li>
		<%  if @installation and is_controller('reservation') %>
		<li class="<%= get_active('reservation_index') %>"><%=  link_to(label_name(:reservations) , list_reservations_path(:id => @installation)) %></li>
		<% end %>
<%			
		# end
	end
%>
</ul>

<div class="clear"></div>

</div>
