<% can_be_modified = (match.user != current_user) %>
<tr>
	<td class="first">&nbsp;</td>
	<td><%= image_link_tiny(match.user) %></td>
	<td><%= user_link(match.user) %></td>

	<td class="name_and_date">
		<%= ratings_for match, :show_user_rating => true, :dimension => :technical, :small => true if can_be_modified %>
	</td>

	<td>&nbsp;</td>

	<td class="name_and_date">
		<%= ratings_for match, :show_user_rating => true, :dimension => :physical, :small => true if can_be_modified %>
	</td>

	<td>&nbsp;|&nbsp;</td>

	<td class="name_and_date">
		<%= ratings_for match, :static, :dimension => :technical, :small => true %>  
	</td>

	<td>&nbsp;</td>

	<td class="name_and_date">
		<%= ratings_for match, :static, :dimension => :physical, :small => true %>
	</td>

	<td class="last" width="400">&nbsp;</td>
</tr>
