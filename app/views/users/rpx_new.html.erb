<div class="block">

	<%#= render :partial => 'secondary_navigation' %>

	<div class="content">  

		<h2 class="title"><%= control_action_label %></h2>

		<div class="inner">
		
			<% form_for @user, :url => rpx_create_path, :html => { :class => :form } do |f| -%>
			
			<div class="group"></div>
						
			<div class="group">
			  <%= f.label :name, label_name('name'), :class => :label %>
			  <%= f.text_field :name, :class => 'textfield' %>
			</div>

			<div class="group">
			  <%= f.label :email, label_name('email'), :class => :label %>
			  <%= f.text_field :email, :class => 'textfield' %>
			</div>
			
			<div class="group">
			  <%= f.label :time_zone, label_name('time_zone'), :class => :label %>
			  <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones %><br />
			  <span class="description"><%= label_name('time_zone', 'description') %></span>
			</div>
			
			<div class="group"></div>
			
			<div class="group navform">
				<%= submit_tag label_name(:create), :class => "button" %> <%= label_name(:or) %> <%= link_to label_name(:cancel), users_path %>
			</div>
			
			<% end -%>


		</div>

	</div>

</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>