</li>

<% if current_user_flag %>
<li class="username">
	<label for="entry-title"><%= :description %></label>
	<%= f.text_area :description, :cols => 40, :rows => 20, :class => 'textfield' %>		
	<span>
		<%= t :self_description_requirement %>
	</span>
</li>
<% end %>

<li class="username">
	<label for="entry-title"><%= t :email %></label>
	<%= f.text_field :email, :maxlength=> '32', :size=> '30', :class=> "textfield" %>
	<span>
		<%= t :visible_only_to_you_requirement %>
	</span>	
</li>

<% if current_user_flag %>
<li class="username">
