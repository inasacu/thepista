	<label for="entry-title"><%= t :profile_technical %></label>
	<%= f.text_field :technical, :maxlength=> '5', :size=> '10', :class=> "textfield" %>	
	<span>
		<%= t :technical_level_requirement %>
	</span>
</li>

<li class="username">
	<label for="entry-title"><%= t :profile_physical %></label>
