	<span>
		<%= t :private_option_requirement %>
	</span>
</li>
<% end %>
<li class="username">
	<label for="entry-title"><%= t :t_zone %></label>
	<%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones %>
	<span>
		<%= t :time_zone_requirement %>
	</span>
</li>


<% if current_user_flag and current_user.has_role?('maximo') %>
<li class="username">
	<label for="entry-title"><%= t :beta_code %></label>
