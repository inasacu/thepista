<%
	user_can_modify = @user.can_modify?(current_user) 
%>


<div class="row">

<%#= set_title_class(the_label) %>

<div class="twelve columns">

	<% if user_can_modify %>		

		<%= set_image_and_link(link_to(label_name('users_edit'), edit_user_path(@user)), 'user') %>

	<% else %>
		<%= set_image_and_link(link_to(label_name(:send_message_to), new_message_path(:id => @user)), 
						'message') if @user != current_user %>
	<% end %>

	<%	current_user.groups.each do |group| 
			the_group = h(group.name)
			is_member = @user.is_member_of?(group)  
	%>
			<%= option_image_link('user_add') ***  join_item_link_to(@user, group, true) unless is_member %>
	<% end %>



	</div>
</div>


