<div class="block">
	<h3><%= label_name("user_options") %></h3>
	<div class="content">
<% 
	if @user.can_modify?(current_user) 
%>		
	<p><%= option_image_link('user') %>&nbsp;&nbsp;<%= link_to label_name('users_edit'), edit_user_path(@user) %></p>
<% 
	else 
%>
	<p><%= option_image_link('message') %>&nbsp;&nbsp;<%= link_to label_name(:send_message_to), new_message_path(:id => @user) if @user.available and @user != current_user %></p>
<% 
	end 
%>
	</div>
</div>
