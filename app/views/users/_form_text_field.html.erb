<%
languages = ['es', 'en', 'fr', 'ge', 'it']

  options = ""
	languages.each do |language|
		options += "<option value='#{language}'>" + label_name(language) + "</option>"	
	end
%>

<div class="group">
  <%= f.label :name, label_name('name'), :class => :label %>
  <%= f.text_field :name, :class => 'text_field' %><br />
  <span class="description"><%= label_name('name', 'description') %></span>
</div>
  
<div class="group">
  <%= f.label :email, label_name('email'), :class => :label %>
  <%= f.text_field :email, :class => 'text_field' %><br />
  <span class="description"><%= label_name('email', 'description') %></span>
</div>
  
<div class="group">
  <%= f.label :phone, label_name('phone'), :class => :label %>
  <%= f.text_field :phone, :class => 'text_field' %><br />
  <span class="description"><%= label_name('phone', 'description') %></span>
</div>

<div class="group">
  <%= f.label :dorsal, label_name('dorsal'), :class => :label %>
  <%= f.text_field :dorsal, :class => 'text_field' %><br />
  <span class="description"><%= label_name('dorsal', 'description') %></span>
</div>

<div class="group">
  <%= f.label :position, label_name('position'), :class => :label %>
  <%= f.text_field :position, :class => 'text_field' %><br />
  <span class="description"><%= label_name('position', 'description') %></span>
</div>

<div class="group">
  <%= f.label :language, label_name('language'), :class => :label %>
  <%= select_tag "user[language]", options %><br />
  <span class="description"><%= label_name('language', 'description') %></span>
</div>
  
<div class="group">
  <%= f.label :time_zone, label_name('time_zone'), :class => :label %>
  <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones %><br />
  <span class="description"><%= label_name('time_zone', 'description') %></span>
</div>

<div class="group">
  <%= f.label :description, label_name('description'), :class => :label %>
  <%= f.text_area :description, :class => 'text_field' %><br />
  <span class="description"><%= label_name('description') %></span>
</div>