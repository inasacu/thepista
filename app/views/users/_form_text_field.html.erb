<%
	options = ""
	LANGUAGES.each do |language|
		options += "<option value='#{language}'>" + label_name(language) + "</option>"	
	end
%>

<div class="group">
  <%= f.label :name, label_name('name'), :class => :label %>
  <%= f.text_field :name, :class => 'textfield' %><br />
  <span class="description"><%= control_label('name_description') %></span>
</div>
  
<div class="group">
  <%= f.label :email, label_name('email'), :class => :label %>
  <%= f.text_field :email, :class => 'textfield' %><br />
  <span class="description">&nbsp;</span>
</div>
  
<div class="group">
  <%= f.label :phone, label_name('phone'), :class => :label %>
  <%= f.text_field :phone, :class => 'textfield' %><br />
  <span class="description"><%= label_name('phone', 'description') %></span>
</div>

<div class="group">
  <%= f.label :company, label_name('company'), :class => :label %>
  <%= f.text_field :company, :class => 'textfield' %><br />
  <span class="description"><%= label_name('company', 'description') %></span>
</div>

<div class="group">
  <%= f.label :language, label_name('language'), :class => :label %>
  <%= select_tag "user[language]", options %><br />
  <span class="description"><%= label_name('language', 'description') %></span>
</div>
  
<div class="group">
  <%= f.label :time_zone, label_name('time_zone'), :class => :label %>
  <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones %><br />
  <span class="description"><%= label_name('time_zone', 'description') %></span>
</div>

<div class="group">
  <%= f.label :description, label_name('description'), :class => :label %>
  <%= f.text_area :description, :class => 'textfield' %><br />
  <span class="description"><%= label_name('description') %></span>
</div>