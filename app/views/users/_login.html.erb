<%
the_signup = is_action('signup')
label_confirm = "#{field_label_name(:password_confirmation)}<br/>#{field_label_name(:password)}"

%>
<div class="group">		
	<label><%= field_label_name(:email) %></label><%= f.text_field :email, :class => 'username text' %>	
	<br/>
	<br/>

	<label><%= field_label_name(:password) %></label><%= f.password_field :password, :class => 'username text' %>
	<br/>
	<br/>
	<br/>
	
	<% if the_signup %>

		<label><%= label_confirm %></label><%= f.password_field :password_confirmation, :class => 'username text' %>
		<br/>
		<br/>
		<br/>
		<%= label_name(:recaptcha_type_words) %>
		<br/>
		<%= recaptcha_tags %>
		<br/>

	<% end %>

	<div class="group navform" align="">
		<%= submit_tag label_name(:signup), :class => "button" %>	 
	</div>		
</div>
