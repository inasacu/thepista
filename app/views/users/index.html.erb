<div class="block">

  <%= render :partial => 'secondary_navigation' if current_user %>  
  
  <div class="content">   
  
    <h2 class="title"><%= control_action_label %></h2>
	
    <div class="inner">
	
      <table class="table">
	  
        <tr>             
          <th class="first">&nbsp;</th>
          <th><%= I18n.t(:name) %></th>
          <th><%= I18n.t(:t_zone) %></th>
          <th class="last"><%= I18n.t(:last_game_played) %></th>
        </tr>
		
        <% @users.each do |user| -%>		
			<tr>
			  <td>
				<%= image_link_small user %>
			  </td>
			  
			  <td>
				<%= user_link user %>
			  </td>
			  
			  <td>
				<%= user.time_zone %>
			  </td>
			  
			  <td class="last">
				<%= nice_day_of_week(user.last_login_at) %> 
			  </td>		  
			</tr>
        <% end -%>
		
      </table>
	  <%= render :partial => 'shared/action_bar', :locals => { :collection => @user } %>
	  
    </div>
	
  </div>
  
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>