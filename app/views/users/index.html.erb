<div class="block">

  <%= render :partial => 'secondary_navigation' if current_user %>  

  <div class="content">   
  
    <h2 class="title"><%= get_collection_label(@users) %></h2>
	
    <div class="inner">
	
      <table class="table">
	  
		<tr>             
			<th class="first">&nbsp;</th>
			<th><%= I18n.t(:name) %></th>
			<th><%= I18n.t(:group) %></th>
			<th><%= I18n.t(:time_zone) %></th>
			<th><%= I18n.t(:last_game_played) %></th>
			<th class="last">&nbsp;</th>
		</tr>
		
        <% @users.each do |user| -%>		
			<tr>
			  <td>
				<%= image_link_small user %>
			  </td>
			  
			  <td>
				<%= user_link user %>
			  </td>

			  <td>
				<%= user_link user %>
			  </td>			  

			  <td>
				<%= user.time_zone %>
			  </td>
			  
			  <td>
				<%= nice_day_time user.last_login_at %> 
			  </td>	
			
			  <td class="last">
	            <%= link_to label_name(:show), user_path(user) %> |
	            <%= link_to label_name(:edit), edit_user_path(user) %> |
	            <%= link_to label_name(:destroy), user_path(user), :method => :delete, :confirm => label_name(:are_you_sure) %>
	          </td>	
	  
			</tr>
        <% end -%>
		
      </table>
	  <%= render :partial => 'shared/action_bar', :locals => { :collection => @user } %>
	  
    </div>
	
  </div>
  
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>