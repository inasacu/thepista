<% @cup = Cup.find(@stage.cup_id) unless @cup %>

<div class="block">

	<%= render :partial => '/cups/secondary_navigation' %>  

	<div class="content">  

		<h2 class="title"><%= "#{control_action_label} #{label_name('for')} " %><%= cup_link @cup %></h2>

		<div class="inner">

			<% form_for :stage, :url => stages_path, :html => { :class => :form } do |f| -%>
			<%= f.hidden_field :cup_id %>
			<%= render :partial => "form", :locals => {:f => f} %>
			<% end -%>

		</div>

	</div>

</div>
