- full_invitation ||= false
- the_invitation = invitation.message
- the_invitation = "#{the_invitation.strip[0..55]}..." if the_invitation.length > 55 and !full_invitation
%tr
  %td
    = image_link_small invitation.user
  %td.name_and_date
    %span.label
      = label_name(:to)
      \:
    = invitation.recipient
    %br/
    %span.label
      = label_name(:from)
      \:
    = user_link invitation.sender
    %br/
    %span.date
      = nice_day_of_week(invitation.created_at)
  %td
    = sanitize(invitation.message)
  %td
    %span
  %td.last
    = link_to image_tag("icons/email_delete.png"), invitation_path(invitation), |
      :method => :delete,                                                       |
      :confirm => %(#{label_name(:invitation_delete) }?),                       |
      :title => label_name(:invitation_delete)                                  |
