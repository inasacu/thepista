<div class="block" id="block-forms-2"> 

  <%#= render :partial => 'secondary_navigation' %>  

  <%= render :partial => '/users/secondary_navigation' %>
  
  <div class="content"> 
  
	<h2 class="title">
		<%= "#{label_name(:invitation)} "  %>

		<%  if @schedule %>
			<%= "#{label_name(:to)} #{schedule_link @schedule}"  %>

		<%  elsif @group %>
			<%= "#{label_name(:to)} #{group_link @group}"  %>

		<%  elsif @challenge %>
			<%= "#{label_name(:to)} #{challenge_link @challenge}"  %>

		<% end %>
	</h2>
	
	<div class="inner"> 
	
	  <% form_for :invitation, :url => invitations_path, :html => { :class => :form } do |f| -%>
	  
		<%= hidden_field :schedule, :id %>
		<%= hidden_field :group, :id %>
		<%= hidden_field :challenge, :id %>
	
		<div class="columns"> 
		
		  <div class="column left"> 
		  
			<div class="group">
			  <%= f.label :email_addresses, label_name('email_addresses'), :class => :label %>
			  <%= f.text_field :email_addresses, :class => 'text_field' %><br />
			  <span class="description"><%= label_name('email_addresses', 'description') %></span>
			</div> 
			
			<div class="group">
			  <%= f.label :message, label_name(:message), :class => :label %>
			  <%= f.text_area :message, :class => 'textfield' %><br />
			  <span class="description"><%= label_name('message', 'description') %></span>
			</div>
			
		  </div> 
		  
		  <div class="column right"> 
	
		  </div> 
		  
		</div> 
		
		<div class="clear"></div> 
		
		<div class="group navform">
			<%= submit_tag @invitation.new_record? ? control_label('create') : control_label('edit'), 
							:class => "button" %> <%= label_name(:or) %> <%= link_to label_name(:cancel), invitations_path %>
		</div>
		
	  <% end %>
	  
	</div> 
	
  </div> 
  
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
