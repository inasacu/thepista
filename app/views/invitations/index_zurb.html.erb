<%
	the_label = label_name(:invitations)
	content_for(:title, the_label)
%>

<div class="block"> 
	<%= get_secondary_navigation(Message.new) %>  

	<div class="content">   

		<h2 class="title"><%= get_collection_label(@invitations) %></h2>

		<div class="inner">

			<% if object_counter(@invitations) > 0 %>

			<table class="table">
				<%= render :partial => 'invitation_zurb', :collection => @invitations %>
			</table>

			<% end %>
			<%= render :partial => 'shared/action_bar_zurb', :locals => { :collection => @invitation } %>

		</div>
	</div>
</div>