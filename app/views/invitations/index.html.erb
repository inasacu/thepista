<div class="block">

	<%= render :partial => 'secondary_navigation' %>  

	<div class="content">   

		<h2 class="title"><%= get_collection_label(@invitations) %></h2>

		<div class="inner">

			<% if object_counter(@invitations) > 0 %>

			<table class="table">

					<% @invitations.each do |invitation| %>
					<%= render :partial => 'invitation', :locals => {:invitation => invitation}  %>
					<% end %>
				
			</table>

			<% end %>
			<%= render :partial => 'shared/action_bar', :locals => { :collection => @invitation } %>

		</div>
	</div>
</div>
<% content_for :sidebar, render(:partial => 'sidebar') -%>