
<% unless message.trashed?(current_user) -%>
	<%= link_to image_tag("icons/email_delete.png"), message_path(message), 
													:method => :delete, 
													:confirm => %(#{label_name(:message_delete) }?),
													:title => label_name(:message_delete) %>
<% else -%>	
	<%= link_to image_tag("icons/email_add.png"), untrash_message_path(message),
	            		:title => label_name(:message_untrash) %>
<% end -%>