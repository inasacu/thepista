<% @group ? check = true : check = false %>

<% unless @recipient %>
<%= hidden_field :recipient, :id %>	
<% end %>

<% unless @schedule %>
<%= hidden_field :schedule, :id %>
<% end %>


  <div class="group">
    <%= f.label :subject, label_name(:subject), :class => :label %>
    <%= f.text_field :subject, :class => 'text_field' unless @message.reply? %>
	<%= @message.subject if @message.reply? %>
	<br />
    <span class="description"><%= label_name('subject', 'description') %></span>
  </div>

  <div class="group">
    <%= f.label :body, label_name(:body), :class => :label %>
    <%= f.text_area :body, :class => 'text_area' %>
	<br />
    <span class="description"><%= label_name('body', 'description') %></span>
  </div>
		

<div class="group">
	<label for="user_username"><%= t :users  unless @recipient %></label>	
</div>

<div class="group">

	<% if @schedule %>
	<%= render :partial => '/messages/recipient_roster', :locals => {:schedule => @schedule, :checked => check } %>
	<%= hidden_field :schedule, :id %>
	<% elsif @recipient %>
	<%= hidden_field :recipient, :id %>
	<% else %>
	<%= render :partial => '/messages/recipient_list', :locals => {:recipients => @recipients, :checked => check } %>
	<% end %>

</div>	


<div class="clear"></div> 

<div class="group navform">
	<%= submit_tag @message.new_record? ? label_name(:create) : label_name(:edit), 
	:class => "button" %> <%= label_name(:or) %> <%= link_to label_name(:cancel), messages_path %>
</div>


