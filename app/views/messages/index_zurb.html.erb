<%
	the_label = label_name(:messages)
	content_for(:title, the_label)
	has_items = (object_counter(@messages) > 0)
%>

		 
<% if has_items %>

<% previous = [] %>
<% @messages.each do |message| %>
	<%= render 'messages/message_zurb', :message => message, :display_icons => true unless previous.include?(message.parent_id) %>
	<% previous << message.parent_id %>
<% end %>


<% end %>


<%= render 'shared/no_items_to_display' unless has_items %>


