<%
	convocados ||= false
	subscription ||= false
	the_check ||= false
	the_label ||= label_name(:users)

	if recipients
		the_class = recipients.first.class.to_s 
		case the_class
		when "Escuadra"										
			the_label = label_name(:escuadras_false)
		when "User"											
			the_label = label_name(:users)
		else
			the_label = label_name(:users)
		end
	end
	
	counter = 0
	
%>


<div class="row">
	<div class="seven columns">	
				
		<fieldset id="roster">
			<h5><%= the_label %></h5>
			<hr/>
			
			
			
			<%#= render 'shared/check_radio_button_zurb' if recipients %>
		
			
			
			<div class="row">
				<div class="twelve columns" style="border-style:Inset;height:480px;overflow:auto;">
					<table cellpadding="0" cellspacing="0" border="0">
			
			
<% 
			first_character = ''
			counter = 0
			recipients.each do |recipient| 

				if (first_character != (recipient.name.chars.first).upcase)
					first_character = (recipient.name.chars.first).upcase
					counter = 0
				else
					counter = 1
				end 
				if (counter == 0)
%>					
					<br/>
					<strong><span style="padding: 4px; text-align: left; font-size: 15px;"class="<%= first_character %>"><%= first_character %></span></strong>
					<hr/>
<%
				end

				case the_class
				when "Escuadra"										
%>											
					<%= render "escuadras/item_single_zurb", :escuadra => recipient, :checked => false %>					
					
<%				when "User" %>		
					
					<%= render "messages/recipient_item_single_zurb", :recipient => recipient, :checked => the_check, :convocados => convocados %>		
					
<%
				else
				end
			end
%>

		
				</table>
				
			</div>
		</div>			
			<br/>
			<hr/>
		
		
		</fieldset>
		
	</div>
</div>






