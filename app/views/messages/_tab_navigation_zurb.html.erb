	is_new_message = (get_controller_action =='message_new' or get_controller_action == 'message_create')
%>

<% if is_new_message %>
	<%= item_new(@message) %>
<% else %>
	<%= set_tab_navigation(link_to(label_name(:inbox), messages_path, :class => get_active('message_index'))) %>
	<%= set_tab_navigation(link_to(label_name(:message_sent), sent_messages_path, :class => get_active('message_sent'))) %>
	<%= set_tab_navigation(link_to(label_name(:invitations_create), new_invitation_url, :class => get_active('invitation_new'))) %>
	<%#= set_tab_navigation(link_to(label_name(:invitations_import), invite_url, :class => get_active(the_invitation))) %>
