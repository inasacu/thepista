<div class="block">

	<%= render :partial => 'secondary_navigation' %>  

	<div class="content">   

		<h2 class="title"><%= get_collection_label(@messages) %></h2>

		<div class="inner">

			<% if @messages.count > 0 %>

			<table class="table">

					<% previous = [] %>
					<% @messages.each do |message| %>
					<%= render :partial => 'message', :locals => {:message => message} unless previous.include?(message.parent_id) %>
					<% previous << message.parent_id %>
					<% end %>
				
			</table>

			<% end %>
			<%= render :partial => 'shared/action_bar', :locals => { :collection => @message } %>

		</div>
	</div>
</div>
<% content_for :sidebar, render(:partial => 'sidebar') -%>