<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', messages_path %></li>
      <li><%= link_to 'New', new_message_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Messages</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>Subject</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @messages.each do |message| -%>
        <tr>
          <td>
            <%= message.id %>
          </td>
          <td>
            <%= link_to message.subject, message_path(message) %>
          </td>
          <td>
            <%= message.created_at %>
          </td>
          <td class="last">
            <%= link_to 'show', message_path(message) %> |
            <%= link_to 'edit', edit_message_path(message) %> |
            <%= link_to 'destroy', message_path(message), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @message  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>