<div class="block">

	<%= render :partial => 'secondary_navigation' if current_user %>  

	<div class="content">   

		<h2 class="title"><%= get_collection_label(@messages) %></h2>

		<div class="inner">

			<% if @messages.count > 0 %>

			<table class="table">

				<tr>             
					<th class="first">ID</th>
					<th>Subject</th>
					<th>Created at</th>
					<th class="last">&nbsp;</th>
				</tr>

				<% @messages.each do |message| -%>
				<tr>
					<td>
						<%= message.id %>
					</td>
					<td>
						<%= link_to message.subject, message_path(message) %>
					</td>
					<td>
						<%= message.created_at %>
					</td>

					<td class="last">
						<%= link_to label_name(:show), message_path(message) %> |
						<%= link_to label_name(:edit), edit_message_path(message) %> |
						<%= link_to label_name(:destroy), message_path(message), :method => :delete, :confirm => label_name(:are_you_sure) %>
					</td>

				</tr>          
				<% end -%>
			</table>

			<% end %>
			<%= render :partial => 'shared/action_bar', :locals => { :collection => @message } %>

		</div>
	</div>
</div>
<% content_for :sidebar, render(:partial => 'sidebar') -%>