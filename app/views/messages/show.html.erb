<% number_of_users = 0 %>

<div class="block">

  <%= render :partial => 'secondary_navigation' %>   
  
  <div class="content">
	<p>
		<b><%= link_to "", schedule_path(:id => @next), :class => 'previous_message' if @next %></b>
	</p>
	<p>
		<b><%= link_to "", schedule_path(:id => @previous), :class => 'next_message' if @previous %></b>
	</p>
	<br />
	<h2 class="title">

		<%= h @all_messages.first.subject %>
		<br />
		
		<span>
			
			<table class="table">
				<tr>
					<td></td>
				<td class="name_and_date">
					<span class="date"><%= label_name(:between) %>:
						<%= user_list(@recipients) %>
					</span>
				</td>
				</tr>
			</table>
		</span>
	</h2>
	
	
	
	<div class="inner">
		<table class="table">			
			<%= render :partial => 'message', :collection => @all_messages, :locals => {:full_message => true} %>
		</table>

		<%= render :partial => '/messages/reply', :locals => {:message => @message, :recipient => current_user} %>

	</div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar_show') -%>