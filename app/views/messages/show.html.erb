<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', messages_path  %></li>
      <li><%= link_to 'New', new_message_path %></li>
      <li class="active"><%= link_to 'Show', message_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b>Subject:</b>
          <%= @message.subject %>
        </p>

        <p>
          <b>Body:</b>
          <%= @message.body %>
        </p>

        <p>
          <b>Parent_id:</b>
          <%= @message.parent_id %>
        </p>

        <p>
          <b>Sender_id:</b>
          <%= @message.sender_id %>
        </p>

        <p>
          <b>Recipient_id:</b>
          <%= @message.recipient_id %>
        </p>

        <p>
          <b>Conversation_id:</b>
          <%= @message.conversation_id %>
        </p>

        <p>
          <b>Reply_id:</b>
          <%= @message.reply_id %>
        </p>

        <p>
          <b>Replied_at:</b>
          <%= @message.replied_at %>
        </p>

        <p>
          <b>Sender_deleted_at:</b>
          <%= @message.sender_deleted_at %>
        </p>

        <p>
          <b>Sender_read_at:</b>
          <%= @message.sender_read_at %>
        </p>

        <p>
          <b>Recipient_deleted_at:</b>
          <%= @message.recipient_deleted_at %>
        </p>

        <p>
          <b>Recipient_read_at:</b>
          <%= @message.recipient_read_at %>
        </p>

        <p>
          <b>Replies:</b>
          <%= @message.replies %>
        </p>

        <p>
          <b>Reviews:</b>
          <%= @message.reviews %>
        </p>

        <p>
          <b>Archive:</b>
          <%= @message.archive %>
        </p>

        <p>
          <b>Deleted_at:</b>
          <%= @message.deleted_at %>
        </p>
      <%= link_to label_name(:edit), edit_message_path(@message) %>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>