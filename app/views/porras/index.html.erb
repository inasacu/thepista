<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', porras_path %></li>
      <li><%= link_to 'New', new_porra_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Porras</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>Name</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @porras.each do |porra| -%>
        <tr>
          <td>
            <%= porra.id %>
          </td>
          <td>
            <%= link_to porra.name, porra_path(porra) %>
          </td>
          <td>
            <%= porra.created_at %>
          </td>
          <td class="last">
            <%= link_to 'show', porra_path(porra) %> |
            <%= link_to 'edit', edit_porra_path(porra) %> |
            <%= link_to 'destroy', porra_path(porra), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @porra  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>