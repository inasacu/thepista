<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', posts_path %></li>
      <li><%= link_to 'New', new_post_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Posts</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>Topic_id</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @posts.each do |post| -%>
        <tr>
          <td>
            <%= post.id %>
          </td>
          <td>
            <%= link_to post.topic_id, post_path(post) %>
          </td>
          <td>
            <%= post.created_at %>
          </td>
          <td class="last">
            <%= link_to 'show', post_path(post) %> |
            <%= link_to 'edit', edit_post_path(post) %> |
            <%= link_to 'destroy', post_path(post), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @post  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>