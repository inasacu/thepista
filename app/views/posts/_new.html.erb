<% 
	@posts = Post.new 
	@posts.topic_id = Forum.find(forum_id).topics.first.id
	@posts.user_id = current_user.id
%>
<div class="inner">

<% form_for :posts, :url => posts_path, :id => forum_id, :html => { :class => :form } do |f| -%>
	<h3 class="title">
		<%= label %>
<% 
	if textfield 
%>
		<%= f.text_field :body, :class => 'textfield' -%>		
<% 
	else 
%>
		<%= f.text_area :body, :class => 'textfield' -%>
<% 
	end 
%>
	<%= f.hidden_field :topic_id %>
	<%= f.hidden_field :user_id %>

	<%= f.submit label_name(:post) %>
	</h3>
<% end -%>

	<div class="clear"></div>

</div>
