<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', posts_path  %></li>
      <li><%= link_to 'New', new_post_path %></li>
      <li class="active"><%= link_to 'Show', post_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b>Topic_id:</b>
          <%= @post.topic_id %>
        </p>

        <p>
          <b>User_id:</b>
          <%= @post.user_id %>
        </p>

        <p>
          <b>Body:</b>
          <%= @post.body %>
        </p>
      <%= link_to 'Edit', edit_post_path(@post) %>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>