<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', comments_path  %></li>
      <li><%= link_to 'New', new_comment_path %></li>
      <li class="active"><%= link_to label_name(:edit), edit_comment_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">            
    <h2 class="title"><%= control_action_label %></h2>
    <div class="inner">
      <% form_for @comment, :url => comment_path(@comment), :html => { :class => :form } do |f| -%>
        <%= render :partial => "form", :locals => {:f => f} %>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>