	<% comments.each do |comment| -%>
<tr>
	<td>
		<% if comment.user %>
			<%= image_link_small comment.user %>
		<% elsif @group %>
			<%= group_image_link_small @group %>		
		<% end %>
	</td>
	<td>
		<span class="name">	
			
			<span class="label"><%= label_name(:from) %>:</span>
			
			<% if comment.user %>
				<%= user_link comment.user %>
			<% elsif @group %>
				<%= group_link @group %>	
			<% end %>

			
		</span>
		<br />
		<span class="date">
			<%= nice_day_of_week(comment.created_at) %>
		</span>
	</td>
	<td>
		<span class="">							
				<%=h comment.body %>	
		</span>
	</td>
	
	
	
	<td class="last">
		<%#= render :partial => 'action', :locals => {:comment => comment} %>
	</td>
</tr>
<% end -%>

