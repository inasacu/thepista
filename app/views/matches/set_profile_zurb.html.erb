<% 
@schedule ||= @match.schedule
@matches ||= @schedule.the_roster

@is_futbol = @schedule.group.is_futbol?
@is_basket = @schedule.group.is_basket?

a_roster = !(@schedule.convocados.empty?)
the_label = "#{label_name(:rosters)} #{label_name(:in)} #{sanitize(@schedule.name)}"
# content_for(:title, sanitize(@schedule.name))
@positions = Type.find(table_type = 'User', :order => "id")

%>

<div class="row">

	<div class="twelve column">   

		<%= set_title_class(the_label) %>

		<div class="inner">
		
			<table class="table">

			  <tr>             
				<%= set_content_tag_safe(:th, "&nbsp;", "first") %>
				<%= content_tag :th, "&nbsp;", :class => "heading" %>
				<%= content_tag :th, "&nbsp;", :class => "heading" %>
				<%= content_tag :th, label_name(:position), :class => "heading", :align => "center" %>
				<%= content_tag :th, "&nbsp;", :class => "heading", :align => "center" %>
				<%= content_tag :th, "&nbsp;", :class => "heading", :align => "center" %>
				<%= content_tag :th, "&nbsp;", :class => "last", :width => "400" %>
			  </tr>
			
      <%= form_for (@match), :url => match_path(@match), :html => { :class => :form } do |f| -%>
		
		<% @matches.each do |match| %>
		<%= render "matches/profile_zurb", :f => f, :match => match, :positions => @positions %>
		<%- end -%>
		
		</table>
	
		<div class="clear"></div> 
		<br />
		<br />
		<div class="group navform">
			<%= submit_tag @match.new_record? ? control_label('create') : control_label('edit'), 
					:class => "button" %> <%= label_name(:or) %> <%= link_to label_name(:cancel), matches_path %>
		</div>
		
      <% end -%>

		</div>

	</div>

</div>

<!-- end of the line -->