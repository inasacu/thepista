<% 
	new_or_existing = match.new_record? ? 'new' : 'existing' 
	prefix = "match[match_attributes][]" 
%>



	  
<!-- field_for start -->		
<% 
fields_for prefix, match do |match_form| 
	if (first_team == (@schedule.group_id == match.group_id)) or @is_basket
-%>
	<tr>
		<td valign="top" width="200">
			<%= image_link_small match.user %>&nbsp;&nbsp;&nbsp;&nbsp;<%= user_link match.user %>
		</td>		
		<td>&nbsp;&nbsp;<td/>		
		<td>&nbsp;&nbsp;<td/>		
		<td>&nbsp;&nbsp;<td/>	
		
		<%= render :partial => 'futbol', :locals => {:match_form => match_form} if @is_futbol %>
		<%= render :partial => 'basket', :locals => {:match_form => match_form} if @is_basket %>			 
			
	</tr>
<%
 	end
end 
-%>
<!-- field_for end -->

