<div class="block">

	<div class="secondary-navigation">

	<ul>
	<li class="<%= get_first_active('password_reset_new') %>">
		<%=link_to label_name(:password_forgotten), :controller => 'password_resets', :action => 'new' %>
	</li>
	</ul>

	<div class="clear"></div>

	</div>

	<div class="content">  

		<h2 class="title"><%= control_action_label %></h2>
		<h4>&nbsp;&nbsp;&nbsp;&nbsp;<%= label_name(:password_reset_instructions) %></h4><br /><br />

		<div class="inner">
		
      		<% form_tag password_resets_path do %>

			<div class="group">
		    <%= label :email, label_name('name') %>&nbsp;&nbsp;<%= text_field_tag :email %>	    
		  	</div><br />

			<div class="group navform"> 
				<%= submit_tag label_name(:password_reset), :class => "button" %>
			</div>

			<% end -%>

		</div>

	</div>

</div>







