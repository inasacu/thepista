<% 	get_first_active ||=""
	get_first_active = get_active("#{get_the_controller}_#{get_the_action}") if is_controller('group') and is_action('index')
%>

<div class="secondary-navigation">
	
<ul>
	<li class="<%= get_first_active %>"><%=  link_to(label_name(:my_cup), groups_path) %></li>
	<li class="<%= get_active('cup_list') %>"><%=  link_to(label_name(:all_cup) , list_cups_path) %></li>
	<li class="<%= get_active('cup_show') %>"><%=  cup_link(@cup) if @cup %></li>
<% 
	the_label = "" 
	the_action = ['show','edit', 'team list']
	the_controller = ['classified', 'fee', 'payment']
	active_classified ||= ""
	active_classified = get_active("#{get_the_controller}_#{get_the_action}") if the_controller.include?(get_the_controller)
	
	if the_action.include?(get_the_action) or the_controller.include?(get_the_controller)
		if current_user.is_member_of?(@cup) 
		the_label = label_name(:wall)
%>		
		<li class="<%= get_active('entry_show') %>"><%=  link_to(the_label, blog_path(@cup.blog)) %></li>
		<li class="<%= get_active('cup_team_list') %>"><%=  link_to(label_name(:users) , team_list_path(:id => @cup)) %></li>
		<% if current_user.is_manager_of? (@cup)  %>
		<li class="<%= get_active('fee_list') %>"><%=  link_to(label_name(:fees) , list_fees_path(:id => @cup)) %></li>
		<li class="<%= get_active('fee_complete') %>"><%=  link_to(label_name(:fees_complete) , complete_fees_path(:id => @cup)) %></li>
		<% end -%>
<%			
		end
	end 
%>
	<li class="<%= get_active('classified_index') %>"><%= link_to(label_name(:classifieds), classifieds_url(:id => @cup)) if @cup %></li>
</ul>

<div class="clear"></div>

</div>
