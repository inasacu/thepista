<% 	get_first_active ||=""
	get_first_active = get_active("#{get_the_controller}_#{get_the_action}") if is_controller('cup') and is_action('index')
%>

<div class="secondary-navigation">
	
<ul>
	<li class="<%= get_first_active %>"><%=  link_to(label_name(:cups_upcoming), cups_path) %></li>
	<li class="<%= get_active('cup_list') %>"><%=  link_to(label_name(:cups_list) , list_cups_path) %></li>
	<li class="<%= get_active('cup_show') %>"><%=  cup_link(@cup) if @cup %></li>								
	<li class="<%= get_active('cups_escuadra_list') %>"><%=  link_to(label_name(:escuadras) , escuadras_url(:id => @cup)) if @cup %></li>			
</ul>

<div class="clear"></div>

</div>
