<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', cups_path %></li>
      <li><%= link_to 'New', new_cup_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Cups</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>Name</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @cups.each do |cup| -%>
        <tr>
          <td>
            <%= cup.id %>
          </td>
          <td>
            <%= link_to cup.name, cup_path(cup) %>
          </td>
          <td>
            <%= cup.created_at %>
          </td>
          <td class="last">
            <%= link_to 'show', cup_path(cup) %> |
            <%= link_to 'edit', edit_cup_path(cup) %> |
            <%= link_to 'destroy', cup_path(cup), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @cup  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>