<%
	the_label = label_name(:cups)
	content_for(:title, the_label)
	has_cups = (object_counter(@cups) > 0)
%>

<div class="block">
	
	<%= render "cups/secondary_navigation", :cups => @cups %>

	<div class="content">  
			<% if has_cups %>
				<%= render :partial => '/cups/index_full' %>
			<% else %>
				<%= render :partial => '/cups/index_blank' %>
			<% end %>
	</div>	
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
<% content_for :sidebar, render(:partial => '/cups/sidebar_legend') -%>