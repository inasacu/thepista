<div class="columns"> 

  <div class="column left"> 	

  <div class="group">
    <%= f.label :name, label_name('name'), :class => :label %>
    <%= f.text_field :name, :class => 'text_field' %><br />
    <span class="description"><%= control_label('name_description') %></span>
  </div>

  <div class="group">
	  <%= f.label :time_zone, label_name('time_zone'), :class => :label %>
	  <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones %><br />
	  <span class="description"><%= label_name('time_zone', 'description') %></span>
  </div>

  <div class="group">
    <%= f.label :sport_id, label_name('sport'), :class => :label %>
   	<%= f.select(:sport_id, Sport.sport_name, {:selected => @cup.sport_id, :include_blank => true}) %><br />
    <span class="description"><%= label_name('sport', 'description') %></span>
  </div>

  <div class="group">
    <%= f.label :starts_at, label_name('starts_at'), :class => :label %>
    <%= f.datetime_select :starts_at, :class => 'datetime_select' %><br />
    <span class="description"><%= label_name('starts_at', 'description') %></span>
  </div>

  <div class="group">
    <%= f.label :ends_at, label_name('ends_at'), :class => :label %>
    <%= f.datetime_select :ends_at, :class => 'datetime_select' %><br />
    <span class="description"><%= label_name('ends_at', 'description') %></span>
  </div>

  <div class="group">
    <%= f.label :deadline_at, label_name('deadline_at'), :class => :label %>
    <%= f.datetime_select :deadline_at, :class => 'datetime_select' %><br />
    <span class="description"><%= label_name('deadline_at', 'description') %></span>
  </div>

  <div class="group">
    <%= f.label :description, label_name('description'), :class => :label %>
    <%= f.text_area :description, :class => 'text_area' %><br />
    <span class="description"><%= label_name('description') %></span>
  </div>

  <div class="group">
    <%= f.label :conditions, label_name('conditions'), :class => :label %>
    <%= f.text_area :conditions, :class => 'text_area' %><br />
    <span class="description"><%= label_name('conditions') %></span>
  </div>

  </div> 

  <div class="column right"> 

  <div class="group">
	<%= f.label :photo, label_name('photo'), :class => :label %>
	<%= f.file_field :photo, :class => 'text_field' %><br />
	<span class="description"><%= label_name('photo', 'description') %></span>
  </div>

  <div class="group">
    <%= f.label :group_stage_advance, label_name('group_stage_advance'), :class => :label %>
    <%= f.text_field :group_stage_advance, :class => 'textscore' %><br />
    <span class="description"><%= label_name('group_stage_advance', 'description') %></span>
  </div>

  <div class="group">
    <%= f.label :points_for_win, label_name('points_for_win'), :class => :label %>
    <%= f.text_field :points_for_win, :class => 'textscore' %><br />
    <span class="description"><%= label_name('points_for_win', 'description') %></span>
  </div>

  <div class="group">
    <%= f.label :points_for_draw, label_name('points_for_draw'), :class => :label %>
    <%= f.text_field :points_for_draw, :class => 'textscore' %><br />
    <span class="description"><%= label_name('points_for_draw', 'description') %></span>
  </div>

  <div class="group">
    <%= f.label :points_for_lose, label_name('points_for_lose'), :class => :label %>
    <%= f.text_field :points_for_lose, :class => 'textscore' %><br />
    <span class="description"><%= label_name('points_for_lose', 'description') %></span>
  </div>

  <div class="group">
    <%= f.label :group_stage, label_name('group_stage'), :class => :label %>
    <%= f.check_box :group_stage, :class => 'check_box' %><br />
    <span class="description"><%= label_name('group_stage') %></span>
  </div>

  <div class="group">
    <%= f.label :group_stage_single, label_name('group_stage_single'), :class => :label %>
    <%= f.check_box :group_stage_single, :class => 'check_box' %><br />
    <span class="description"><%= label_name('group_stage_single') %></span>
  </div>

  <div class="group">
    <%= f.label :second_stage_single, label_name('group_second_stage_single'), :class => :label %>
    <%= f.check_box :second_stage_single, :class => 'check_box' %><br />
    <span class="description"><%= label_name('group_second_stage_single') %></span>
  </div>

  <div class="group">
    <%= f.label :final_stage_single, label_name('group_final_stage_single'), :class => :label %>
    <%= f.check_box :final_stage_single, :class => 'check_box' %><br />
    <span class="description"><%= label_name('group_final_stage_single') %></span>
  </div>

  </div> 

</div>
        
<div class="clear"></div> 

<div class="group navform">
	<%= submit_tag @cup.new_record? ? control_label('create') : control_label('edit'), 
			:class => "button" %> <%= label_name(:or) %> <%= link_to label_name(:cancel), cups_path %>
</div>





