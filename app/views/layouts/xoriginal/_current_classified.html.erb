<%  unless current_classifieds.empty?  %>
<div id="classified">
  <div style="display: block;" id="persistent_notification">
    <div class="status">
      <% for classified in current_classifieds %>
        <h2><span id="status_title"><%=h classified.message %></span></h2>
      <% end %>
      <%= link_to_remote "Hide this message", :url => "/javascripts/hide_classified.js" %>
    </div>
  </div>
</div>
<% end %>