<% display = false %>

<% if current_user.is_member_of?(@schedule.group) or current_user.is_member_of?(@schedule.group_visit) %>

  <% unless @schedule.convocados.empty? %>
    <tr class="text game">
      <td class="label">&nbsp;</td>
	  <td>
		<%= render :partial => '/layouts/check_radio_button' %>		
		</td>	
    </tr>
	    <tr class="text game">
	      <td class="label"><%= t(:rosters) %>:</td>
		  <td>&nbsp;</td>	
	    </tr>

    <%= render :partial => '/layouts/share/message_roster_box', :locals => {:schedule => @schedule, :the_roster => @schedule.the_roster} %>
  <% end %>


	  <% unless @schedule.last_minute.empty?  %>
	    <tr class="text game">
	      <td class="label"><%= t(:last_minute) %>:</td>
	    </tr>
	    <%= render :partial => '/layouts/share/message_roster_box', :locals => {:schedule => @schedule, :the_roster => @schedule.the_last_minute} %>
	  <% end %>
	
	<% if display %>
	   <% unless @schedule.no_shows.empty?  %>
	    <tr class="text game">
	      <td class="label"><%= t(:no_shows) %>:</td>
	    </tr>
	    <%= render :partial => '/layouts/share/message_roster_box', :locals => {:schedule => @schedule, :the_roster => @schedule.the_no_show} %>
	  <% end %> 

	   <% unless @schedule.unavailable.empty?  %>
	      <tr class="text game">
	        <td class="label"><%= t(:unavailable) %>:</td>
	      <tr>
	      <%= render :partial => '/layouts/share/message_roster_box', :locals => {:schedule => @schedule, :the_roster => @schedule.the_unavailable} %>
	    <% end %>
	<% end %>
	
<% end %>