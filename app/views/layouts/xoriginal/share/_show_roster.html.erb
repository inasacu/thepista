<% if current_user.is_member_of?(schedule.group) or current_user.is_member_of?(schedule.group_visit) %>

  <% @match_type = Type.find(:all, :conditions => "id in (1, 3, 5)") %>
  
  <% unless schedule.convocados.empty? %>
    <div class="header withedit"><h2><%= t :rosters %></h2>
		<div><%= "#{t :games_played }" if current_user.is_sub_manager_of?(schedule.group) %></div>
	</div>	

    <%= render :partial => '/layouts/share/show_roster_box', 
			   :locals => {:schedule => @schedule, :the_roster => @schedule.the_roster, :match_type => @match_type} %>

  <% end %>

  <% unless schedule.last_minute.empty? or schedule.played? %>
    <div class="header withedit"><h2><%= t :last_minute %></h2>
		<div><%= "#{t :games_played }" if current_user.is_sub_manager_of?(schedule.group) %></div>
	</div>

    <%= render :partial => '/layouts/share/show_roster_box', 
			   :locals => {:schedule => @schedule, :the_roster => @schedule.the_last_minute, :match_type => @match_type} %>

  <% end %>

  <% unless schedule.no_shows.empty? or schedule.played? %>
    <div class="header withedit"><h2><%= t :no_shows %></h2>
		<div><%= "#{t :games_played }" if current_user.is_sub_manager_of?(schedule.group) %></div>
	</div>

    <%= render :partial => '/layouts/share/show_roster_box', 
			   :locals => {:schedule => @schedule, :the_roster => @schedule.the_no_show, :match_type => @match_type} %>

  <% end %>


  <% unless schedule.unavailable.empty? or schedule.played? %>
    <div class="header withedit"><h2><%= t :unavailable %></h2>
		<div><%= "#{t :games_played }" if current_user.is_sub_manager_of?(schedule.group) %></div>
	</div>

    <%= render :partial => '/layouts/share/show_roster_box', 
			   :locals => {:schedule => @schedule, :the_roster => @schedule.the_unavailable, :match_type => @match_type} %>

  <% end %>
<% end %>