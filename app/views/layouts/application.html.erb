<!--[if gt IE 8]><!--> <html lang="es"> <!--<![endif]-->

<head>

	<meta charset="utf-8" />
	<!-- <meta http-equiv="X-UA-Compatible" content="IE=Edge">  -->
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<meta name="Generator" content="HayPista" />
	<meta name="Origen" content="HayPista" />
	<meta name="Author" content="HayPista" />
	<meta name="Locality" content="Spain" />	
	<meta name="Language" content="es" />
	<meta name="title" content="<%= page_title %>.  <%= I18n.t(:modo_wo_strong) %>" />
	<meta name="description" content="<%= I18n.t(:modo_key_title) %> <%= I18n.t(:modo_keywords) %>">		
	<meta name="keywords" content="<%= I18n.t(:modo_keywords) %>"/> 

	<meta name="vw96.objectype" content="Document" />
	<meta name="resource-type" content="Document" />
	<meta name="distribution" content="all" />
	<meta name="robots" content="all" />

	<title><%= page_title %></title>

	<link rel="image_src" href="http://haypista.com/images/haypista.png" />
	<link rel="apple-touch-icon-precomposed" href="../../apple-touch-icon.png"/>
	
	<link rel="home" href="http://www.haypista.com">
	<%= favicon_link_tag %>
  


	<%= stylesheet_link_tag  "application", :media => "all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>

	<% 
		display_foundation_4 = false
	%>
	<% if display_foundation_4 %>
			<link rel="stylesheet" href="http://foundation.zurb.com/docs/assets/normalize.css" />
	    	<link rel="stylesheet" href="http://foundation.zurb.com/docs/assets/docs.css" />
	    	<script src="http://foundation.zurb.com/docs/assets/vendor/custom.modernizr.js"></script>
	<% end %>

	<%= stylesheet_link_tag "foundation" %>
	<%= javascript_include_tag "foundation" %>
	
	<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" type="text/javascript"></script>
	
		
	<!-- Included CSS Files -->
	<%= stylesheet_link_tag 'docs' if display_foundation_4 %>
	<%= stylesheet_link_tag 'zurb/grid' %>
	<%= stylesheet_link_tag 'zurb/forms' %>
	<%= stylesheet_link_tag 'zurb/presentation' %>
	<%= stylesheet_link_tag 'zurb/app' %>
	<%= stylesheet_link_tag 'standard_form' %>
	<%= stylesheet_link_tag 'mobile' if is_mobile_browser %>

	<!--[if lt IE 9]>
		<link rel="stylesheet" href="../../stylesheets/zurb/ie.css">
	<![endif]-->
	<!-- IE Fix for HTML5 Tags -->
	<!--[if lt IE 9]>
		<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->

</head>

<body id="-page" class="">

	<%= render 'shared/header' if display_foundation_4 %>
	<%= render 'shared/header_zurb' unless display_foundation_4 and !is_mobile_browser %>

	<div class="container">
		
		<%= render 'shared/internet_explorer' %>
		<%= render 'shared/flash_zurb' %>
		<%= render 'shared/wrapper_zurb' %>	
	</div>

	
	<%= render 'shared/footer_zurb'  unless display_foundation_4 %>
	<%= render 'shared/footer' if display_foundation_4 and !is_mobile_browser %>
	
	<%= render :partial => 'utilities/google_analytics' %>
	
</body>

</html>
