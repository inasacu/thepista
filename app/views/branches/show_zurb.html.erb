<%
    the_label = label_name(:branches)
	content_for(:title, the_label)

	the_new_label = "#{the_label} (#{item_name_link(@branch)})"
	left_label = ""
	right_label = "#{item_name_link(@group)}<br/>#{nice_day_time_wo_year_exact(Time.zone.now)}".html_safe
	the_items = get_branch_calendar_details
%>


<div class="row">
	<div class="twelve columns">

			<%	@branch.groups.each do |group| %>			
				<%= link_to(group.name, branch_url(:id => group), set_tab_navigation_active('branch_index')) %>
			<% end %>					

	</div>
</div>

<%#= content_tag :h6, right_label, :class => "subheader" %>
<hr />


<%= render 'home/upcoming_schedule_zurb', :my_schedules => the_items, :the_label => label_name(:upcoming_schedules) unless the_items.empty? %>