<div class="block">

  <%= render :partial => 'secondary_navigation' %>  

  <div class="content">   
  
    <h2 class="title"><%= I18n.t(:has_tournament_users, :count => @total) %></h2>
	
    <div class="inner">
	
      <table class="table">
	  
		<tr>             
			<th class="first">&nbsp;</th>
			<th><%=label_name(:name) %>&nbsp;/<br />
				<%#=label_name(:last_game_played) %></th>
			<th><%=label_name(:tournament) %></th>
			<th><%=label_name(:time_zone) %></th>
			<!-- <th><%#=label_name(:tournaments_joined) %></th> -->
			<th class="last">&nbsp;</th>
		</tr>
		
        <% @users.each do |user| -%>
		<tr>
		  <td><%= image_link_small user %></td>					
		  <td><%= user_link user %></td>
		  <td><%= user.has_tournament? ? tournament_list(user.tournaments) : label_name('tournaments_none') %></td>		 
		  <td><%= user.time_zone %></td>			  
		  <!-- <td><%#= nice_day_date(user.updated_at)  %></td>	 -->
		  <td class="last"><%= link_to label_name(:send_message), new_message_path(:id => user) %></td>		  
		</tr>
        <% end -%>
		
      </table>
	  <%= render :partial => 'shared/action_bar', :locals => { :collection => @users } %>
	  
    </div>
	
  </div>
  
</div>

<% content_for :sidebar, render(:partial => 'sidebar_show') -%>