<div class="block">

  <%= render :partial => 'secondary_navigation' %>  

  <div class="content">   
  
    <h2 class="title"><%= I18n.t(:has_group_users, :count => @total) %></h2>
	
    <div class="inner">
	
      <table class="table">
	  
		<tr>             
			<th class="first">&nbsp;</th>
			<th><%=label_name(:name) %>&nbsp;/<br />
				<%=label_name(:last_game_played) %></th>
			<th><%=label_name(:group) %></th>
			<th><%=label_name(:time_zone) %></th>
			<th><%=label_name(:member_since) %></th>
			<th class="last">&nbsp;</th>
		</tr>
		
        <% @users.each do |user| -%>		
			<tr>
			  <td>
				<%= image_link_small user %>
			  </td>
					
			  <td>
				<%= user_link user %><br />
				<%= nice_day_time user.last_login_at %>
			  </td>

			  <td>
				<%= user.has_group? ? group_list(user.groups) : label_name('groups_none') %>
			  </td>			  

			  <td>
				<%= user.time_zone %>
			  </td>
			  
			  <td>
				<%= nice_day_time user.created_at %> 
			  </td>	
			
			  <td class="last">
	            <%= link_to label_name(:send_message), new_message_path(:id => user.id) %>				
	          </td>	
	  
			</tr>
        <% end -%>
		
      </table>
	  <%= render :partial => 'shared/action_bar', :locals => { :collection => @users } %>
	  
    </div>
	
  </div>
  
</div>

<% content_for :sidebar, render(:partial => 'sidebar_show') -%>