<div class="block">

<h3><%= control_label('option') %></h3>

<ul class="navigation">
<% 
	if current_user.is_member_of?(@tournament) 
		the_confirmation = label_with_name(:do_leave_group, "#{@tournament.name}?")
%>
		<li><%= link_to(label_name(:send_message_to_group), new_message_path(:group_id => @tournament.id)) %></li>
		<li><%= link_to(label_name(:invitations_create_group) , new_invitation_url(:group_id => @tournament.id)) %></li>
<% 
	else
%>
		<li><%= link_to(label_name(:send_message_to_group), new_message_path(:id => @tournament.all_the_managers.first)) %></li>
<%
		# unless current_user.has_pending_petition?(current_user) 
		unless current_user.has_group_petition?(current_user, @tournament)
			the_label = label_with_name('add_to_group', @tournament.name)
			the_confirmation = "#{ label_name(:petition_to_join_group) } #{current_user.name} #{ label_name(:to) } #{@tournament.name}?"
%> 
			<li><%= link_to(the_label, join_team_path(:id => @tournament.id, :teammate => current_user.id), :confirm => the_confirmation) %></li>
<% 
		end 
	end
	
	if current_user.is_sub_manager_of?(@tournament)
%>
	<li><%= link_to label_name(:send_scorecard), new_message_path(:scorecard_id => @tournament.schedules.first.id) unless @tournament.schedules.blank? %></li>
<%
    end
 
	if current_user.is_manager_of?(@tournament)
		the_label = label_with_name('create_schedule', @tournament.name)
		the_confirmation = "#{ label_name(:destroy_group) } #{ label_name(:to) } #{@tournament.name}?" 
%>                    
		<li><%= link_to label_name(:create_schedule), new_schedule_path(:id => @tournament.id) %></li>
		<li><%= link_to(label_name('groups_edit'), edit_group_path(@tournament)) if current_user.is_manager_of?(@tournament) %></li>  
		<li><%= link_to(control_label('destroy'), 
				{:controller => 'groups', :action => 'destroy', :id => @tournament}, 
				:confirm => the_confirmation) unless @tournament.has_schedule? %></li>
<% 
	end 
%>
</ul>

</div>