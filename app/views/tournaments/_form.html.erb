<div class="columns"> 

  <div class="column left"> 	

  <div class="group">
    <%= f.label :name, label_name('name'), :class => :label %>
    <%= f.text_field :name, :class => 'text_field' %><br />
    <span class="description"><%= control_label('name_description') %></span>
  </div>

  <!-- <div class="group">
    <%#= f.label :signup_at, label_name('signup_at'), :class => :label %>
    <%#= f.datetime_select :signup_at, :class => 'datetime_select' %><br />
    <span class="description"><%#= label_name('signup_at', 'description') %></span>
  </div> -->

  <!-- <div class="group">
