<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', teammates_path %></li>
      <li><%= link_to 'New', new_teammate_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Teammates</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>User_id</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @teammates.each do |teammate| -%>
        <tr>
          <td>
            <%= teammate.id %>
          </td>
          <td>
            <%= link_to teammate.user_id, teammate_path(teammate) %>
          </td>
          <td>
            <%= teammate.created_at %>
          </td>
          <td class="last">
            <%= link_to label_name(:show), teammate_path(teammate) %> |
            <%= link_to label_name(:edit), edit_teammate_path(teammate) %> |
            <%= link_to label_name(:destroy), teammate_path(teammate), :method => :delete, :confirm => label_name(:are_you_sure) %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @teammate  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>