<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', casts_path %></li>
      <li><%= link_to 'New', new_cast_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Casts</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>Challenge_id</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @casts.each do |cast| -%>
        <tr>
          <td>
            <%= cast.id %>
          </td>
          <td>
            <%= link_to cast.challenge_id, cast_path(cast) %>
          </td>
          <td>
            <%= cast.created_at %>
          </td>
          <td class="last">
            <%= link_to 'show', cast_path(cast) %> |
            <%= link_to 'edit', edit_cast_path(cast) %> |
            <%= link_to 'destroy', cast_path(cast), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @cast  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>