<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', sports_path  %></li>
      <li><%= link_to 'New', new_sport_path %></li>
      <li class="active"><%= link_to 'Show', sport_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b>Name:</b>
          <%= @sport.name %>
        </p>

        <p>
          <b>Description:</b>
          <%= @sport.description %>
        </p>

        <p>
          <b>Icon:</b>
          <%= @sport.icon %>
        </p>

        <p>
          <b>Points_for_win:</b>
          <%= @sport.points_for_win %>
        </p>

        <p>
          <b>Points_for_lose:</b>
          <%= @sport.points_for_lose %>
        </p>

        <p>
          <b>Points_for_draw:</b>
          <%= @sport.points_for_draw %>
        </p>

        <p>
          <b>Deleted_at:</b>
          <%= @sport.deleted_at %>
        </p>
      <%= link_to label_name(:edit), edit_sport_path(@sport) %>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>