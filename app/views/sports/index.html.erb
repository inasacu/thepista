<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', sports_path %></li>
      <li><%= link_to 'New', new_sport_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Sports</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>Name</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @sports.each do |sport| -%>
        <tr>
          <td>
            <%= sport.id %>
          </td>
          <td>
            <%= link_to sport.name, sport_path(sport) %>
          </td>
          <td>
            <%= sport.created_at %>
          </td>
          <td class="last">
            <%= link_to 'show', sport_path(sport) %> |
            <%= link_to 'edit', edit_sport_path(sport) %> |
            <%= link_to 'destroy', sport_path(sport), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @sport  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>