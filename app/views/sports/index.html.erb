<%
	the_label = label_name(:sports)
	content_for(:title, the_label)
%>

<div class="block">

  <%= get_secondary_navigation %>  

  <div class="content">   
  
    <h2 class="title"><%= get_collection_label(@sports) %></h2>
	
    <div class="inner">
	
      <table class="table">
	  
        <tr>   
			<%= set_content_tag_safe(:th, "&nbsp;", "first") %>
			<%= content_tag :th, label_name(:name), :class => "heading" %>
			<%= content_tag :th, label_name(:points_for_win), :class => "heading" %>
			<%= content_tag :th, label_name(:points_for_lose), :class => "heading" %>
			<%= content_tag :th, label_name(:points_for_draw), :class => "heading" %>
			<%= content_tag :th, label_name(:player_limit), :class => "heading" %>
			<%= content_tag :th, label_name(:icon), :class => "heading" %>
			<%= content_tag :th, "&nbsp;&nbsp;", :class => "last" %>
        </tr>
        <% @sports.each do |sport| -%>
		<tr>
			<%= content_tag :td, "" %>
			<td><%= link_to sport.name, sport_path(sport) %></td>
			<td align="center"><%= sport.points_for_win %></td>
			<td align="center"><%= sport.points_for_lose %></td> 
			<td align="center"><%= sport.points_for_draw %></td>
			<td align="center"><%= sport.player_limit %></td>
			<td align="left"><%= image_tag(sport.icon, options={:style => "height: 15px; width: 15px;"}) %></td>
			<td class="last">
				<span class="action">
					<strong><%= link_to label_name(:sports_edit), edit_sport_path(:id => sport) %></strong>
				</span>
			</td>
        </tr>          
		        <% end -%>

		      </table>
			  <%= render :partial => 'shared/action_bar', :locals => { :collection => @sport } %>

		    </div>

		  </div>

		</div>

		<% content_for :sidebar, render(:partial => 'sidebar') -%>