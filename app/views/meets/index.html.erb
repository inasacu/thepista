<div class="block">

  <%= render :partial => 'secondary_navigation' %>  

  <div class="content">   
  
    <h2 class="title"><%= get_collection_label(@meets) %>
	<%#= group_vs_invite @meets %>
	</h2>
	
    <div class="inner">
	
	<% if object_counter(@meets) > 0 %>
	
      <table class="table">
	  
        <tr> 
          <th class="first">&nbsp;</th>
          <th><%= label_name(:group) %>&nbsp;/<br />
			  <%= label_name(:gameday_at) %></th>
          <th><%= label_name(:concept) %>&nbsp;/<br />
			  <%= label_name(:sport) %></th>
          <th><%= label_name(:marker) %><br />
		      <%= label_name(:time_zone) %></th>
          <th><%= label_name(:general_information) %></th>
		
          <th class="last">&nbsp;</th>
		</tr>
        
        <% @meets.each do |meet| -%>
        <tr>
          <td>
            <%= group_image_link_small meet.group %>
          </td>
          <td>
			<%= group_link meet.group %><br />
			<%= nice_day_date meet.starts_at %>
          </td>
          <td>            
            <%= link_to sanitize(meet.concept), meet_path(meet) %><br />
			<%= meet.sport.name %>
          </td>
          <td>
			<%= marker_link meet.group.marker %><br />
			<%= meet.time_zone %>
		  </td>

			<% if meet.game_played? %>            
				<td><%= group_score_link meet %></td>          
			<% else %>            
			<td><%= label_name(:game_not_played) %></td>            
			<% end %>

          <td class="last">
			<% if current_user.is_manager_of?(meet.group) %>
            	<%= link_to label_name('edit'), edit_meet_path(meet) unless meet.last_season?(current_user) %><br />
            	<%#= link_to control_label('destroy'), meet_path(meet), 
										:method => :delete, :confirm => label_name(:are_you_sure) unless meet.played? %>
			<% end %>
          </td>

        </tr>          
        <% end -%>
      </table>

		<% end %>
		<%= render :partial => 'shared/action_bar', :locals => { :collection => @meet } %>

		</div>
		</div>
	</div>
	<% content_for :sidebar, render(:partial => 'sidebar') if current_user.is_manager? -%>