<div class="columns"> 

  <div class="column left"> 

  <div class="group">
    <%= f.label :concept, label_name('concept'), :class => :label %>
    <%= f.text_field :concept, :class => 'text_field' %><br />
    <span class="description"><%= control_label('concept_description') %></span>
  </div><br />

  <div class="group">
    <%= f.label :starts_at, label_name('starts_at'), :class => :label %>
    <%= f.datetime_select :starts_at, :class => 'datetime_select' %><br />
    <span class="description"><%= label_name('starts_at', 'description') %></span>
  </div><br />

  <div class="group">
    <%= f.label :ends_at, label_name('ends_at'), :class => :label %>
    <%= f.datetime_select :ends_at, :class => 'datetime_select' %><br />
    <span class="description"><%= label_name('ends_at', 'description') %></span>
  </div><br />

  <div class="group">
    <%= f.label :reminder_at, label_name('reminder_at'), :class => :label %>
    <%= f.datetime_select :reminder_at, :class => 'datetime_select' %><br />
    <span class="description"><%= label_name('reminder_at', 'description') %></span>
  </div><br />

  <div class="group">
    <%= f.label :marker_id, label_name('marker'), :class => :label %>
    <%= f.select(:marker_id, Marker.marker_name, 
	{:selected => @tournament.marker_id, :include_blank => true}) %>&nbsp;<%= link_to label_name(:markers_create), new_marker_url %><br />
    <span class="description"><%= label_name('marker', 'description') %></span>
  </div><br />

  <div class="group">
    <%= f.label :description, label_name('description'), :class => :label %>
    <%= f.text_area :description, :class => 'text_area' %><br />
    <span class="description"><%= label_name('description') %></span>
  </div>

  </div> 

  <div class="column right"> 

  <div class="group">
    <%= f.label :jornada, label_name('jornada'), :class => :label %>
    <%= f.text_field :jornada, :class => 'textscore' %><br />
    <span class="description"><%= label_name('jornada', 'description') %></span>
  </div><br />

  <div class="group">
    <%= f.label :player_limit, label_name('player_limit'), :class => :label %>
    <%= f.text_field :player_limit, :class => 'textscore' %><br />
    <span class="description"><%= label_name('player_limit', 'description') %></span>
  </div><br />

<br />

		<fieldset id="roster">
		<%= render :partial => '/messages/recipient_list', 
		:locals => {:label => label_name(:roster), :recipients => @tournament.users, :checked => true } %>
		</fieldset>
		
		<br /><br />
		
		<div class="group">
			<%= render :partial => '/shared/check_radio_button' unless @recipient %>
		</div>

  </div> 

</div>
<%= f.hidden_field :round_id %>

<div class="clear"></div> <br />

<div class="round navform">
	<%= submit_tag @meet.new_record? ? control_label('create') : control_label('edit'), 
			:class => "button" %> <%= label_name(:or) %> <%= link_to label_name(:cancel), meets_path %>
</div>
