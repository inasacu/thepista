<div class="secondary-navigation">
	
<ul>
<%
the_controller = ['forums', 'topics', 'posts']
the_action = ['show', 'edit', 'tour roster', 'tour no show', 'tour last minute', 'tour unavailable']
unless the_action.include?(get_the_action) or the_controller.include?(get_the_controller) 
%>
	<li class="<%= get_first_active %>"><%= link_to(label_name(:upcoming_meet) , meets_url) %></li>
	<li class="<%= get_active('meet_list') %>"><%= link_to(label_name(:previous_meets) , list_meets_path) %></li>
	<li class="<%= get_active('meet_archive') %>"><%#= link_to(label_name(:archive_list_meets) , archive_list_meets_path) %></li>
<% 
else
	if current_user.is_tour_member_of?(@meet.round.tournament)
		the_label = "#{label_name(:forum)} #{sanitize(@meet.concept)}"
%>
		<li class="<%= get_first_active('meet_show') %>">  <%= meet_link @meet %></li>
		<li class="<%= get_active('topic_show') %>"><%= link_to(the_label, forum_path(@meet.forum)) %></li>	
		
		<% unless (@meet.the_roster.empty?) %>		
			<li class="<%= get_active('meet_team_roster') %>">
					<%= link_to(label_name(:rosters), tour_roster_path(:id => @meet)) %></li>
		<% end %>
				
		<% unless (@meet.the_last_minute.empty?) %>
			<li class="<%= get_active('meet_team_last_minute') %>">
						<%= link_to(label_name(:last_minute), tour_last_minute_path(:id => @meet)) %></li>
		<% end %>
						
		<% unless (@meet.the_no_show.empty?) %>
			<li class="<%= get_active('meet_team_no_show') %>">
						<%= link_to(label_name(:no_shows), tour_no_show_path(:id => @meet)) %></li>
		<% end %>
						
		<% unless (@meet.the_unavailable.empty?) %>
			<li class="<%= get_active('meet_team_unavailable') %>">
						<%= link_to(label_name(:unavailable), tour_unavailable_path(:id => @meet)) %></li>
		<% end %>
<% 
	end
end
%>
</ul>

<div class="clear"></div>

</div>