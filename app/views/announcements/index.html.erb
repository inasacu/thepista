<%
	the_label = label_name(:announcements)
	content_for(:title, the_label)
%>

<div class="block">

	<%= render :partial => 'secondary_navigation' %>  

	<div class="content">   

		<h2 class="title"><%= get_collection_label(@announcements) %></h2>

		<div class="inner">

			<% if object_counter(@announcements) > 0 %>

			<table class="table">
				<tr>            
				  <th class="first">&nbsp;</th>
				  <th><%= label_name(:created_at)%></th>
				  <th><%= label_name(:starts_at)%>&nbsp;&nbsp;<br/>
					  <%=label_name(:ends_at)%>
				  </th>
				  <th><%= label_name(:message) %></th>
				  <th class="last">&nbsp;</th>
				</tr>

			<%= render :partial => 'announcement', :collection => @announcements %>
				
			</table>

			<% end %>
			<%= render :partial => 'shared/action_bar', :locals => { :collection => @announcement } %>

		</div>
	</div>
</div>
<% content_for :sidebar, render(:partial => 'sidebar') -%>