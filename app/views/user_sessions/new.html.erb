<% the_label = label_name('login') %>

<div class="block" id="block-login">
	<h2>
		<%= the_label %>
	</h2>
	
	<div class="content login">
		
		 <%= render :partial => 'shared/flash', :locals => {:flash => flash} %>
			
		<% form_for @user_session, :html => {:class => 'form login'} do |f| %>
		
		<%= render :partial => 'utilities/rpx_now', :locals => {:the_label => the_label} %>
		
		<h3><%= I18n.t(:use_login) %></h3>
		
		<%= render :partial => 'utilities/login', :locals => {:f => f, :the_label => the_label} %>
		<%= render :partial => 'utilities/openid', :locals => {:f => f, :the_label => the_label} %>

		<% end -%>	
	
	</div>
</div>