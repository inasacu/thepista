<%= stylesheet_link_tag 'home' %>

<div id="home">

	<div class="announce">
		<h1><strong><%= label_name(:modo) %></strong></h1>
	</div>
	<div class="features">
		<div class="left" >
			<%= RPXNow.embed_code(APP_CONFIG['rpx_api']['realm'],rpx_token_sessions_url, :language => I18n.locale)  if SHOW_RPX_NOW %>
		</div>
		<div class="rpx">
			
			<p><%= "#{label_name(:use_login)}." %></p>
			
			<% form_for @user_session, :html => {:class => 'form login'} do |f| %>
				<%= render :partial => '/user_sessions/login', :locals => {:f => f, :the_label =>  label_name(:login)}  if SHOW_LOGIN %>			
			<% end -%>
		</div>
	</div>
</div>
