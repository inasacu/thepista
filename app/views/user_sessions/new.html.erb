<% the_label = label_name('login') %>

<div class="block" id="block-login">
	<h2>
		<%= the_label %>
	</h2>
	
	<div class="content login">
		
		 <%= render :partial => 'shared/flash', :locals => {:flash => flash } %>
			
		<% form_for @user_session, :html => {:class => 'form login'} do |f| %>
		  <%#= f.error_messages %>
		
			<div class="group">
				<div class="left">
					<%= f.label :email, field_label_name(:email) , :class => 'label right' %>
				</div>
				<div class="right">
					<%= f.text_field :email, :class => 'text_field' %>		
				</div>
				<div class="clear">
				</div>
			</div>
			<div class="group">
				<div class="left">
					<%= f.label :password, field_label_name(:password) , :class => 'label right' %>
				</div>
				<div class="right">
					<%= f.password_field :password, :class => 'text_field' %>	
				</div>
				<div class="clear">
				</div>
			</div>
			<div class="group">
				<div class="left">
					&nbsp;
				</div>
				<div class="right">
			  <br />
			  <%= f.check_box :remember_me %>&nbsp;&nbsp;<%= f.label :remember_me %><br />
				</div>
				<div class="clear">
				</div>
			</div>
			
			<div class="group navform">
				<%= link_to label_name(:forgot_password), new_password_reset_path %>  
			</div>

			<div class="group navform"> 
				<%= submit_tag the_label, :class => "button" %>  
			</div>

			<h3><%= I18n.t(:use_openid) %></h3>

			<div class="group">		
			  <div class="left"> 		  
				<%= f.label :openid_identifier, field_label_name(:openid_identifier) , :class => :label %>
			  </div>		  
			  <div class="right"> 		  
				<%= f.text_field :openid_identifier, :class => 'text_field' %>			
				<span class="description"><%= field_label_name(:openid_identifier, 'description') %></span> 			
			  </div> 		  
			  <div class="clear"></div> 		  
			</div>
			
			<div class="group navform"> 
				<%= submit_tag the_label, :class => "button" %>&nbsp;&nbsp;<%= link_to label_name(:no_account_yet), signup_path %>
			</div>

		<% end -%>	
	
	</div>
</div>