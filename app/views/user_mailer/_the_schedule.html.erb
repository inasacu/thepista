	<br>
	<%= "<STRONG>#{I18n.t(:score)}</STRONG>:  ".html_safe %>

	<table width="100%" border="0" cellpadding="0" cellspacing="0" style="font: 13px arial;">
	  <tr>
	    <td style="width:1%; color:#999999; vertical-align: top;">â€¢ </td>
