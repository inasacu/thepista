<%
case @message.item.class.to_s      
when "Schedule" 
	@schedule = @message.item 
	%>

	<%= render 'user_mailer/the_schedule' %>

	<%
when "Scorecard"
	@scorecard = @message.item 
	@group = @scorecard.group
	@scorecards = Scorecard.users_group_scorecard(@group)
	%>

	<%= render 'user_mailer/the_scorecard', :collection => Scorecard.users_group_scorecard(@scorecard.group), :group => @scorecard.group %>

	<%
end
%>