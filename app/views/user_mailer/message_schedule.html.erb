<%= render :partial => 'header' %>

<%= render :partial => 'message_schedule_body', 
		   :locals => {:schedule => @schedule, :schedule_url => @schedule_url, 
		   :message => @message, :reply_url => @reply_url} %>

<% unless @schedule.convocados.empty? %>  
	<%= render :partial => 'message_list_box', 
			   :locals => {:label => t(:rosters), :the_roster => @schedule.the_roster, 
			   :schedule => @schedule, :receiver => @receiver, :schedule_url => @schedule_url } %>
<% end %>

<% unless @schedule.last_minute.empty? %>   
	<%= render :partial => 'message_list_box', 
			   :locals => {:label => t(:last_minute), :the_roster => @schedule.the_last_minute, 
			   :schedule => @schedule, :receiver => @receiver, :schedule_url => @schedule_url } %>
<% end %>


<%= render :partial => 'user' %>


<%= render :partial => 'group' %>


<%= render :partial => 'footer' %>