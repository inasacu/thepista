<%= render :partial => 'user_mailer/header' %>
<%= render :partial => 'the_user' %>
<%= render :partial => 'the_body' %>

<%
case @message.item.class.to_s      
when "Schedule" 
	@schedule = @message.item 
%>

<%= render :partial => 'the_schedule' %>

<%
when "Scorecard"
	@scorecard = @message.item 
	@group = @scorecard.group
	@scorecards = Scorecard.users_group_scorecard(@group)
%>

<%= render :partial => 'the_scorecard', :locals => {:collection => Scorecard.users_group_scorecard(@scorecard.group), :group => @scorecard.group} %>

<%
end
%>

<%= render :partial => 'user_mailer/footer' %>