<%= stylesheet_link_tag 'application' %>
<%= stylesheet_link_tag 'web_app_theme', 'themes/djime-cerulean/style' %>
<%= stylesheet_link_tag 'show' %>

<% 
	@archive ||= false 
	@less_games = 5 
	@games_played = @group.games_played	
	scorecards = false
	collection.each {|card| scorecards = true }
%> 
<div class="block">

<% 
	if scorecards	
%>
<div class="content">   

	<h2 class="title"><a href="<%= @group_url %>" title="<%= @group.name %>"><%= @group.name %></a></h2>

	<div class="inner">

		<table class="table">

			<% if @group.is_futbol? %>
			<%= render :partial => '/scorecards/scorecard_futbol_label' %>
			<%= render :partial => '/scorecards/scorecard', :collection => collection, 
							:locals => {:group => @group, :games_played => @games_played, :less_games => @less_games, :mailer => true} %>
			<% end %>
			
			<%  if @group.is_basket?  %>
			<% @scorecard_baskets = @scorecards %>
			<%= render :partial => '/scorecards/scorecard_basket_label' %>
			<%= render :partial => '/scorecards/scorecard_basket', :collection => @scorecard_baskets, 
							:locals => {:group => @group, :games_played => @games_played, :less_games => @less_games, :mailer => true} %>
			<% end %> 
			
			<% unless @group.is_futbol? or @group.is_basket? %>
			<% @scorecard_others = @scorecards %>
			<%= render :partial => '/scorecards/scorecard_other_label' %>
			<%= render :partial => '/scorecards/scorecard_other', :collection => @scorecard_others, 
							:locals => {:group => @group, :games_played => @games_played, :less_games => @less_games, :mailer => true} %>     
			<% end %>
			
			
      
		</table>
		
		<% if @group.is_futbol? %>
		<p><em style="color: rgb(153, 153, 153);">
			<%= "(*) #{I18n.t(:player_with)} #{@less_games} #{I18n.t(:player_with_less_games)}" %>
			</em>
		</p>
		<% end %>
		
		
	</div>

	</div>
<% 
end 
-%>

</div>




