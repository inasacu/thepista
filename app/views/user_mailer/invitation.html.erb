<%= render  'user_mailer/header' %>


<%= I18n.t(:hi_email_header) %>,<br /><br />

<%= "#{@user.name} #{I18n.t(:invitation_to_join)}!" %><br /><br />

<p>
<%= @message %>
<br/>
<br/>
<p>
<hr/>
<br/>
<br/>


<%= I18n.t(:invitation_signup_link) %><br /><br />


<%= @url %><br /><br />


<%= "#{I18n.t(:request_url_does_not_work)}  #{I18n.t(:request_url_issue)}" %><br /><br />


<% if @group %>

	<%= I18n.t(:participate_group_afterwards) %><br /><br />

	<%
		item = @group
		the_label = "#{I18n.t(:add_to_item)} #{I18n.t(:to)} #{sanitize(item.name)}"
	%>
	<%=  link_to(the_label, join_item_url(:id => item, :item => item.class.to_s, :teammate => @user)) %><br /><br />

<% end %>


<% if @schedule %>

	<%= I18n.t(:participate_group_afterwards) %><br /><br />

	<%
		item = @schedule.group
		the_label = "#{I18n.t(:add_to_item)} #{I18n.t(:to)} #{sanitize(item.name)}"
	%>
	<%=  link_to(the_label, join_item_url(:id => item, :item => item.class.to_s, :teammate => @user)) %><br /><br />

	<%= I18n.t(:participate_schedule_afterwards) %><br /><br />
	<%= link_to(@schedule.name, schedule_url(@schedule)) %>
	<br /><br />

<% end %>


<% if @challenge %>

	<%= I18n.t(:participate_challenge_afterwards) %><br /><br />
	<%= link_to(@challenge.name, challenge_url(@challenge)) %>
	<br /><br />

	<%
		item = @challenge
		the_label = "#{I18n.t(:add_to_item)} #{I18n.t(:to)} #{sanitize(item.name)}"
	%>
	<%=  link_to(the_label, join_item_url(:id => item, :item => item.class.to_s, :teammate => @user)) %><br /><br />

<% end %>


<% if @cup %>

	<%= I18n.t(:participate_cup_afterwards) %><br /><br />
	<%= link_to(@cup.name, cup_url(@cup)) %>
	<br /><br />
	
<% end %>


<%= render 'user_mailer/footer' %>


