<% 
	counter = 0 
%>

<p style="margin: 15px 0 2px 0"><strong><%= label %>:</strong></p>

<table width="100%" border="0" cellpadding="0" cellspacing="0" style="font: 13px arial;">
	
	<% the_roster.each do |match| 
			the_label_name = (match.user.name.to_s.length > 14) ? "#{match.user.name.to_s.strip[0..12]}..." : match.user.name
		%>
		
	<tr>    
		<td style="width:1%; color:#999999; vertical-align: top;">â€¢&nbsp;</td>
		<td style="width:25%"><%= counter += 1 %>.&nbsp;&nbsp;
			
			<%= "#{link_to(match.user.name, user_url(match.user))}".html_safe %>
			<br>
			
		</td>
		
		<td style="width:25%"><%= "#{match.team_name(@schedule)}".html_safe %></td>
		
		<% if @schedule.played? %>
		
          	<td style="width:25%"><%= "#{match.win_loose_draw_label}".html_safe %></td>

		<% elsif @receiver == match.user %>
		
			<td style="width:25%">
				
				<%= "#{link_to(I18n.t(:not_able_to_attend), schedule_url(@schedule))}".html_safe %>
			
			</td>
			
		<% end %>
		
	</tr>
	
	<% end %>  
	
</table>
