<% 
	is_enchufado_manager = is_current_manager_of(enchufado)  
	the_group_link = ""
	first_website_label = "<STRONG>#{label_name(:websites)}</STRONG><br/>"
	first_group_label = "<STRONG>#{label_name(:groups)}</STRONG><br/>"

	the_subplug_name_url = "#{subplug.name}"
	the_subplug_link = "#{first_website_label}#{the_subplug_link} #{link_to(the_subplug_name_url, subplug.url, :target => '_blank')} <br/>#{subplug.url}"
	
	subplug.groups.each do |group|
		the_group_link = "#{first_group_label}#{the_group_link} #{item_name_link(group)} <br/>"
		first_group_label = ""
	end
	
	six_or_nine_columns = is_enchufado_manager ? "six columns" : "nine columns" 
	
	the_div_hr = ""
	the_div_hr = "border-bottom:solid 1px #ccc;"
%>


<div class="three columns">
</div>

	
<div class="<%= six_or_nine_columns %>" style="<%= the_div_hr %>">

	
	<%= "#{the_subplug_link}".html_safe %><br/><br/>
	<%= "#{the_group_link}".html_safe %>
	
	<%#= "#{label_name(:url)}: #{the_subplug_link}".html_safe %>
	<%#= "#{label_name(:website)}: #{the_group_link}".html_safe %>
	
</div>


<% if is_enchufado_manager %>

	<br/>
	<div class="three columns">
			<%= set_form_create_id_image_link(Group.new, :subplug_id, subplug, :group_new) %>
	</div>

<% end %>


