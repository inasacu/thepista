<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', entries_path %></li>
      <li><%= link_to 'New', new_entry_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Entries</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>Blog_id</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @entries.each do |entry| -%>
        <tr>
          <td>
            <%= entry.id %>
          </td>
          <td>
            <%= link_to entry.blog_id, entry_path(entry) %>
          </td>
          <td>
            <%= entry.created_at %>
          </td>
          <td class="last">
            <%= link_to 'show', entry_path(entry) %> |
            <%= link_to 'edit', edit_entry_path(entry) %> |
            <%= link_to 'destroy', entry_path(entry), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @entry  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>