<%
	unless @challenge.cup_id.nil?
  		@cup = Cup.find(@challenge.cup_id)
	end
%>
<div class="block">

	<%= get_secondary_navigation(@challenge) %>  

	<div class="content">  

		<h2 class="title"><%= "#{control_action_label} #{label_name('for')} " %>
		<%= item_name_link(@cup) %></h2>

		<div class="inner">

		<%= form_for (@challenge), :url => challenges_path, :html => { :class => :form } do |f| -%>
		<%= render :partial => "form", :locals => {:f => f} %>
		<% end -%>

		</div>

	</div>

</div>

