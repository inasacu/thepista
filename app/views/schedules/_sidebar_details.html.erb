<%
	is_user_manager = current_user.is_manager_of?(@schedule.group)
	the_label = "#{h(@schedule.group.name)} - #{sanitize(@schedule.concept)}"
	# content_for(:title, sanitize(@schedule.concept))	

	show_start_rating = (current_user.is_member_of?(@schedule.group) and @schedule.game_played?)
	
	show_individual_score = (@schedule.group.is_futbol? and @schedule.played?)
	
	if show_individual_score
		@the_home_score = ""
		@the_away_score = ""
		
		@has_score = false

		@schedule.matches.find(:all, :conditions => ["group_id != 0 and goals_scored > 0"]).each do |match| 
			@the_home_score += "#{item_name_link(match.user)}&nbsp;&nbsp;-&nbsp;&nbsp;#{match.goals_scored}, " 
			@has_score = true
		end

		@schedule.matches.find(:all, :conditions => ["group_id = 0 and goals_scored > 0"]).each do |match| 
			@the_away_score += "#{item_name_link(match.user)}&nbsp;&nbsp;-&nbsp;&nbsp;#{match.goals_scored}, " 
			@has_score = true
		end
		@the_home_score = @the_home_score.chop.chop
		@the_away_score = @the_away_score.chop.chop
		
		show_individual_score = (show_individual_score and @has_score)
	end
	
%>

<div class="block">

	<h3><%= sanitize(@schedule.concept) %></h3>
	
<div class="content">
		
		<p>		
		
		<table>		

			<tr>
				<td class="name_and_date">
					<%= item_name_link(@schedule.group) %>
					<br/>
					<span class="strong"><%= label_name(:sport) %></span>:
					<%= @schedule.sport.name %>
				</td>
			</tr>
			
			<tr>
				<td class="name_and_date">
					<span class="strong"><%= label_name(:starts_at) %></span>:
					<%= nice_day_time_wo_year(schedule.starts_at) %>
					<br/>
					<span class="strong"><%= label_name(:ends_at) %></span>:
					<%= nice_day_time_wo_year(schedule.ends_at) %>
				</td>
			</tr>
		
			<tr>
				<td class="name_and_date">
					<span class="strong"><%= label_name(:fee_per_game) %></span>:
					<%= number_to_currency(@schedule.fee_per_game) %>
					<br/>
					<span class="strong"><%= label_name(:fee_per_pista) %></span>:
					<%= number_to_currency(@schedule.fee_per_pista) %>
				</td>
			</tr>

			<% unless @schedule.convocados.empty? %>	 
			<tr>
				<td class="name_and_date">
					<span class="strong"><%= label_name(:convocado) %></span>:
					<%=  @schedule.convocados.count %>	
				</td>
			</tr>
			<% end %>

			<% unless @schedule.last_minute.empty? %>	 
			<tr>
				<td class="name_and_date">
					<span class="strong"><%= label_name(:last_minute) %></span>:
					<%= label_name(:last_minute) %>:  <%=  @schedule.last_minute.count %>	
				</td>
			</tr>
			<% end %>

			<% unless @schedule.no_shows.empty? %>
			<tr>
				<td class="name_and_date">
					<span class="strong"><%= label_name(:no_shows) %></span>:
					<%=  @schedule.no_shows.count %>	
				</td>
			</tr>
			<% end %>

			<tr>
				<td class="name_and_date">
					<span class="strong"><%= label_name(:player_limit) %></span>:
					<%=  @schedule.player_limit %>	
				</td>
			</tr>

			<tr>
				<td class="name_and_date">
					<%= link_to(label_name(:scorecard), scorecard_path(:id => @schedule.group)) %>	
				</td>
			</tr>
			
			

		    <% if @schedule.game_played? %>

		      <tr>
				<td>
		          <%= item_name_link(@schedule.group) %>&nbsp;&nbsp;
		          <%= @schedule.home_score %>&nbsp;&nbsp;-&nbsp;&nbsp;<%= @schedule.away_score %>&nbsp;&nbsp;
		          <%= link_to h(@schedule.group.second_team), group_path(@schedule.group) %>
				</td>
		      </tr>

				<% if show_individual_score %>	
					<tr>	
						<td><%= @the_home_score %></td>		
					</tr>
					<tr>
						<td><%= @the_away_score %></td>		
					</tr>
				<% end %>

		    <% end %>
			
		</table>
		
		</p>
</div>
	
</div>




