<%= render 'utilities/form_datetime', :the_form => the_form, 
			:the_starts_at => 'reminder_at',
			:the_date_value => @schedule.reminder_at.strftime("%d-%m-%Y"),
			:the_time_value => @schedule.reminder_at.strftime("%H:%M") %>


