
<div class="inner">

	<p>
	  <b><%= label_name(:concept) %>:</b>
	  <%=h @schedule.concept %>
	</p>

    <p>
      <b><%= label_name(:description) %>:</b>
      <%=h @schedule.description %>
    </p>

	<% if @schedule.played? %>	
	<p>
      <b><%= label_name(:game_notes) %>:</b>
      <%= @schedule.matches.first.description %>
    </p>
	<% end %>

    <% if @schedule.game_played? %>
      <p>
        <b><%= label_name(:group) %>:</b>
        	
          <%= group_link @schedule.group %>
          &nbsp;&nbsp;
          <%= @schedule.matches.first.group_score %>&nbsp;&nbsp;-&nbsp;&nbsp;<%= @schedule.matches.first.invite_score %>
          &nbsp;&nbsp;
          <%= link_to h(@schedule.group.second_team), group_path(@schedule.group) %>

      </p>
    <% else %>
      <p>
        <b><%= label_name(:home_group) %>:</b>            
			<%= group_link @schedule.group %>
      </p>
    <% end %>

    <p>
      <b><%= label_name(:sport) %>:</b>
      <%= h(@schedule.sport.name) %>
    </p>

    <p>
      <b><%= label_name(:marker) %></b>
      <%= marker_link @schedule.group.marker %>
    </p>

    <p>
      <b><%= label_name(:starts_at) %>:</b>
      <%= nice_day_of_week(@schedule.starts_at) %>
    </p>

    <p>
      <b><%= label_name(:ends_at) %>:</b>
      <%= nice_day_of_week(@schedule.ends_at) %>
    </p>

    <% unless @schedule.convocados.empty? %>
    <p>
      <b><%= label_name(:rosters) %>:</b>
      <%= @schedule.convocados.count %>
    </p>
    <% end %>

    <% unless @schedule.last_minute.empty? %>
    <p>
      <b><%= label_name(:last_minute) %>:</b>
      <%= @schedule.last_minute.count %>
    </p>
    <% end %>

    <% if @schedule.no_shows.empty? %>
      <p>
        <b><%= label_name(:no_shows) %>:</b>
        <%= @schedule.no_shows.count %>
      </p>
    <% end %>

    <% unless @schedule.convocados.empty? %>
      <p>
        <b><%= label_name(:rosters) %>:</b>
        <%= user_list @schedule.convocados %>
      </p>
    <% end %>

    <% unless @schedule.last_minute.empty? %>
      <p>
        <b><%= label_name(:last_minute) %>:</b>
        <%= user_list @schedule.last_minute %>
      </p>
    <% end %>

    <% unless @schedule.no_shows.empty? %>
      <p>
        <b><%= label_name(:no_shows) %>:</b>
        <%= user_list @schedule.no_shows %>
      </p>
    <% end %>

    <!-- <p>
      <b><%#= label_name(:subscription_at) %>:</b>
      <%#=h nice_day_of_week(@schedule.subscription_at) %>
    </p> -->

    <!-- <p>
      <b><%#= label_name(:non_subscription_at) %>:</b>
      <%#=h nice_day_of_week(@schedule.non_subscription_at) %>
    </p> -->

    <p>
      <b><%= label_name(:fee_per_game) %>:</b>
      <%=h @schedule.fee_per_game %>
    </p>

    <p>
      <b><%= label_name(:fee_per_pista) %>:</b>
      <%=h @schedule.fee_per_pista %>
    </p>

    <p>
      <b><%= label_name(:season) %>:</b>
      <%=h @schedule.season %>
    </p>

    <p>
      <b><%= label_name(:jornada) %>:</b>
      <%=h @schedule.jornada %>
    </p>

    <p>
      <b><%= label_name(:time_zone) %>:</b>
      <%=h @schedule.time_zone %>
    </p>

    <p>
      <b><%= label_name(:player_limit) %>:</b>
      <%=h @schedule.player_limit %>
    </p>

    <p>
      <b><%= label_name(:public) %>:</b>
      <%=h label_name(@schedule.public, 'value') %>
    </p>

    <!-- <p>
      <b><%#= label_name(:season_ends_at) %>:</b>
      <%#= nice_day_date(@schedule.season_ends_at) %>
    </p> -->

</div>
