<% 
	is_schedule_manager = @schedule ? is_current_manager_of(@schedule.group) : false 
	is_new_schedule = (get_controller_action =='schedule_new' or get_controller_action == 'schedule_create')
%>


<%= render('/shared/latest_payment_zurb') if DISPLAY_FREMIUM_SERVICES -%>

<% if @schedule and !is_new_schedule -%>
	<%= render("schedules/sidebar_show_zurb", :schedule => @schedule) -%>
<% end %>



<% if !@schedule and !is_new_schedule -%>
	
	<%= render 'sidebars/sidebar_create_schedule_zurb'%>
	
<% end %>