<% 
	the_label = "#{control_action_label("#{@has_a_roster}")} #{label_name(:in)} #{sanitize(@schedule.concept)}"
	content_for(:title, sanitize(@schedule.concept))
	
	has_been_played = @schedule.played? 
	is_manager = current_user.is_manager_of?(@schedule.group)
%>

<div class="block">
  	
    <%= render "shared/previous_next_message", :schedule => @schedule, :the_previous => @the_previous, :the_next => @the_next -%>
	<%= show_heading(the_label) %> 
	
	<div class="inner">
		
		<div class="columns"> 
				<table class="table">
				<tr>
					<%= content_tag :td, nice_day_of_week(@schedule.starts_at), :class =>"first_left" %>
					<%= content_tag :td, match_all_my_link(@schedule, @match_type, current_user, false), :class =>"last_left" %>
				</tr>
				</table>
		</div>
<% 
	if @has_a_roster
%>
		<%= render :partial => '/schedules/team_roster_box', 
					:locals => {:previous_show => @previous, :next_show => @next,  
								:schedule => @schedule, :the_roster => @the_roster, :match_type => @match_type} %>
<% 
	end 
%>
		</div>
	</div>
</div>

<% content_for :sidebar, render(:partial => '/shared/latest_payment') -%>

<% if @schedule -%>
	<% content_for(:sidebar, render("schedules/sidebar_show", :schedule => @schedule)) -%>
	<%# content_for(:sidebar, render('schedules/sidebar_level', :schedule => @schedule )) if is_manager -%>
	<% content_for(:sidebar, render("shared/share_object", :schedule => @schedule)) -%>
<% end %>




















