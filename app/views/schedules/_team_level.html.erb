		<%= content_tag :th, "&nbsp;" %>
		<%= content_tag :th, "&nbsp;" %>
		<%= content_tag :th, "&nbsp;" %>
		<%= content_tag(:th, label_name(:defense), :align => "center", :title => label_name(:defense)) %>
		<%= content_tag(:th, label_name(:center), :align => "center", :title => label_name(:center)) %>
		<%= content_tag(:th, label_name(:attack), :align => "center", :title => label_name(:attack)) %>
		<%= content_tag(:th, label_name(:technical), :align => "center", :title => label_name(:technical)) %>
		<%= content_tag(:th, label_name(:physical), :align => "center", :title => label_name(:physical)) %>
		<%= content_tag(:th, label_name(:total), :align => "center", :title => label_name(:total)) %>		 	
		<%= content_tag :th, "&nbsp;", :class => "last" %>	

		<%= content_tag :th, "&nbsp;" %>
		<%= content_tag :th, "&nbsp;" %>
		<%= content_tag :th, "&nbsp;" %>
		<%= content_tag :th, "&nbsp;" %>
		<%= content_tag :th, "&nbsp;" %>
		<%= content_tag :th, "&nbsp;" %>
		<%= content_tag :th, "&nbsp;" %>
		<%= content_tag :th, "&nbsp;" %>

		<th class="last">
			<span class="action">
				<%= link_to(label_name(:profile_set), set_profile_url(:id => @schedule), 
				:title => the_label_set) if current_user.is_manager_of?(@schedule.group) %><br/>
				<%= link_to(label_name(:previous_profile_set), set_previous_profile_url(:id => @schedule.id), 
				:title => the_label, :confirm => the_confirmation) if current_user.is_manager_of?(@schedule.group) %><br/>
				<%= link_to(label_name(:profile_user_set), set_user_profile_url(:id => @schedule), 
				:title => the_label_user_set, :confirm => the_confirmation_user_set) if current_user.is_manager_of?(@schedule.group) %>
			</span>
		</th>
	</tr>

	<tr>
