<% 
	technical["difference"] = home["technical"] - away["technical"] 
	physical["difference"] = home["physical"] - away["physical"] 
	technical["minimum"] = ((home["technical"] > away["technical"]) ? away["technical"] : home["technical"]) 
	physical["minimum"] = ((home["physical"] > away["physical"]) ? away["physical"] : home["physical"])
	technical["percentage"] = technical["difference"].abs / technical["minimum"].to_f unless technical["minimum"] == 0 
	physical["percentage"] = physical["difference"].abs / physical["minimum"].to_f unless physical["minimum"] == 0 

	the_label = "#{label_name(:previous_profile_set_full) }"
	the_label_set = "#{label_name(:profile_set_full) }"
	the_label_user_set = "#{label_name(:profile_user_set_full) }"
	the_confirmation = "#{the_label}?"	
	the_confirmation_user_set = "#{the_label_user_set}?"
%>

