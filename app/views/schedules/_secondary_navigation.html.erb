<div class="secondary-navigation">
	
<ul>
<%
the_controller = ['forums', 'topics', 'posts']
the_action = ['show', 'edit', 'team roster', 'team no show', 'team last minute', 'team unavailable']
unless the_action.include?(get_the_action) or the_controller.include?(get_the_controller) 
%>
	<li class="<%= get_first_active %>"><%= link_to(label_name(:upcoming_schedule) , schedules_url) %>	</li>
	<li class="<%= get_active('schedule_list') %>"><%= link_to(label_name(:previous_schedules) , list_schedules_path) %></li>
	<li class="<%= get_active('schedule_archive') %>"><%= link_to(label_name(:archive_list_schedules) , archive_list_schedules_path) %></li>
<% 
else
	if current_user.is_member_of?(@schedule.group)
		the_label = "#{label_name(:forum)} #{@schedule.concept}"
%>
		<li class="<%= get_first_active('schedule_show') %>">  <%= schedule_link @schedule %>
		<li class="<%= get_active('topic_show') %>"><%= link_to(the_label, forum_path(@schedule.forum)) %></li>	
		

		
		<% unless (@schedule.the_roster.empty?) %>		
			<li class="<%= get_active('schedule_team_roster') %>">
					<%= link_to(label_name(:rosters), team_roster_path(:id => @schedule)) %></li>
		<% end %>
				
		<% unless (@schedule.the_last_minute.empty?) %>
			<li class="<%= get_active('schedule_team_last_minute') %>">
						<%= link_to(label_name(:last_minute), team_last_minute_path(:id => @schedule)) %></li>
		<% end %>
						
		<% unless (@schedule.the_no_show.empty?) %>
			<li class="<%= get_active('schedule_team_no_show') %>">
						<%= link_to(label_name(:no_shows), team_no_show_path(:id => @schedule)) %></li>
		<% end %>
						
		<% unless (@schedule.the_unavailable.empty?) %>
			<li class="<%= get_active('schedule_team_unavailable') %>">
						<%= link_to(label_name(:unavailable), team_unavailable_path(:id => @schedule)) %></li>
		<% end %>
<% 
	end
end
%>
</ul>

<div class="clear"></div>

</div>