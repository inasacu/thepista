<div class="block">

  <%= render :partial => 'secondary_navigation' if current_user %>  

  <div class="content">   
  
    <h2 class="title"><%= get_collection_label(@schedules) %></h2>
	
    <div class="inner">
	
	<% if @schedules.count > 0 %>
	
      <table class="table">
	  
        <tr>            
          <th class="first">ID</th>
          <th>Concept</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @schedules.each do |schedule| -%>
        <tr>
          <td>
            <%= schedule.id %>
          </td>
          <td>
            <%= link_to schedule.concept, schedule_path(schedule) %>
          </td>
          <td>
            <%= schedule.created_at %>
          </td>
          <td class="last">
            <%= link_to label_name(:show), schedule_path(schedule) %> |
            <%= link_to label_name(:edit), edit_schedule_path(schedule) %> |
            <%= link_to label_name(:destroy), schedule_path(schedule), :method => :delete, :confirm => label_name(:are_you_sure) %>
          </td>
        </tr>          
        <% end -%>
      </table>

		<% end %>
		<%= render :partial => 'shared/action_bar', :locals => { :collection => @schedule } %>

		</div>
		</div>
	</div>
	<% content_for :sidebar, render(:partial => 'sidebar') -%>