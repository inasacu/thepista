<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', schedules_path %></li>
      <li><%= link_to 'New', new_schedule_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Schedules</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>Concept</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @schedules.each do |schedule| -%>
        <tr>
          <td>
            <%= schedule.id %>
          </td>
          <td>
            <%= link_to schedule.concept, schedule_path(schedule) %>
          </td>
          <td>
            <%= schedule.created_at %>
          </td>
          <td class="last">
            <%= link_to 'show', schedule_path(schedule) %> |
            <%= link_to 'edit', edit_schedule_path(schedule) %> |
            <%= link_to 'destroy', schedule_path(schedule), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @schedule  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>