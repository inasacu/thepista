<% 
	a_roster = !(@schedule.no_shows.empty?)
	the_label = "#{control_action_label("#{a_roster}")} #{label_name(:in)} #{sanitize(@schedule.concept)}"
	content_for(:title, sanitize(@schedule.concept))
%> 

<div class="block">

	
    <%= render "shared/previous_next_message", :schedule => @schedule, :the_previous => @the_previous, :the_next => @the_next -%>
	<%= show_heading(the_label) %>

	<div class="inner">

		<div class="columns"> 
			<div class="column left"> 
				<span class="description"><%= nice_day_of_week(@schedule.starts_at) %></span>
			</div> 
			<div class="column right"> 
				<span class="description"><%= match_my_current_link(@schedule, @match_type, current_user) %></span>
			</div> 
		</div>	
		<br/>
		<br/>
<% 
	if a_roster
%>
		<%= render :partial => '/schedules/team_roster_box', 
					:locals => {:previous_show => @previous, :next_show => @next, :roster => label_name(:no_shows), 
								:schedule => @schedule, :the_roster => @schedule.the_no_show, 
								:match_type => @match_type} %>
<% 
	end 
%>
		</div>
	</div>
</div>

<% content_for :sidebar, render(:partial => '/shared/latest_payment') -%>

<% if @schedule -%>
	<% content_for(:sidebar, render("schedules/sidebar_show", :schedule => @schedule)) -%>
	<%# content_for(:sidebar, render('schedules/sidebar_level', :schedule => @schedule )) if current_user.is_member_of?(@schedule.group) -%>
	<% content_for(:sidebar, render("shared/share_object", :schedule => @schedule)) -%>
<% end %>