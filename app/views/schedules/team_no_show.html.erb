<% 
if current_user.is_member_of?(@schedule.group) 
	unless @schedule.no_shows.empty? or @schedule.played? 
%>
		<%= render :partial => '/schedules/team_roster_box', 
					:locals => {:previous_show => @previous, :next_show => @next, 
					:roster => t(:no_shows), :schedule => @schedule, 
					:the_roster => @schedule.the_no_show, :match_type => @match_type, :display_type => true} %>

<% 
	end 	
	unless @schedule.unavailable.empty? or @schedule.played? 
%>
		<%= render :partial => '/schedules/team_roster_box', 
					:locals => {:previous_show => @previous, :next_show => @next, 
					:roster => t(:unavailable), :schedule => @schedule, 
					:the_roster => @schedule.the_unavailable, :match_type => @match_type, :display_type => false} %>
<% 
	end
end 
%>

 