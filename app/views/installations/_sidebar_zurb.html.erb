<%
	show_schedules = !((@upcoming_schedules.nil? or @upcoming_schedules.blank?))
	show_howto = !(is_action('search'))
	show_completeness = !((current_user.percent_complete == 100) or is_action('search'))
%>

<%#= render('shared/sidebar_howto_zurb') if show_howto -%>
<%#= render('shared/sidebar_schedules_zurb', :upcoming_schedules => @upcoming_schedules) if show_schedules %>
<%#= render('shared/sidebar_latest_fee_zurb') -%>
<%#= render('shared/completeness_zurb', :user => current_user) if show_completeness -%>


<div class="row">
	<h3><%= label_name(:options) %></h3>
	<div class="twelve column">
<% 
		if current_user.is_manager? %>
			<p><%= option_image_link('installation') %>&nbsp;&nbsp;<%= link_to control_label('create'), new_installation_path(:id => @venue) %></p>
<% 		
		else 
%>
			<p><%= control_label('manager_option') %></p>
<%
		end
%>
	</div>
</div>



<div class="row">

	<h3><%= label_name(:options) %></h3>

	<div class="twelve column">
		<p>
			<%= option_image_link('message') %>&nbsp;&nbsp;
			<%= link_to label_name(:send_message_to), new_message_path(:venue_id => @venue, :roster_id => @installation) %>
		</p>
	</div>

</div>
