<div class="columns"> 

  <div class="column left"> 

	<div class="group">
		<%= f.label :name, label_name('name'), :class => :label %>
		<%= f.text_field :name, :class => 'textfield', :value => control_description(:name) %>
	</div>

	<div class="group">
		<%= f.label :starts_at, label_name('starts_at'), :class => :label %>
		<%= f.time_select :starts_at, :class => 'datetime_select' %><br />
		<span class="description"><%= label_name('starts_at', 'description') %></span>
	</div>

	<div class="group">
		<%= f.label :ends_at, label_name('ends_at'), :class => :label %>
		<%= f.time_select :ends_at, :class => 'datetime_select' %><br />
		<span class="description"><%= label_name('ends_at', 'description') %></span>
	</div>

	<div class="group">
		<%= f.label :sport_id, label_name('sport'), :class => :label %>
		<%= f.select(:sport_id, Sport.sport_name, {:selected => @installation.sport_id, :include_blank => true}) %><br />
		<span class="description"><%= label_name('sport', 'description') %></span>
	</div>


	<div class="group">
		<%= f.label :marker_id, label_name('marker'), :class => :label %>
		<%= f.select(:marker_id, Marker.marker_name, 
		{:selected => @installation.marker_id, :include_blank => true})%>&nbsp;<%= link_to label_name(:markers_create), new_marker_url %><br />
		<span class="description"><%= label_name('marker', 'description') %></span>
	</div>

	<div class="group">
		<%= f.label :description, label_name('description'), :class => :label %>
		<%= f.text_area :description, :class => 'textfield' %><br />
		<span class="description"><%= label_name('description') %></span>
	</div>

	<div class="group">
		<%= f.label :conditions, label_name('conditions'), :class => :label %>
		<%= f.text_area :conditions, :class => 'textfield' %><br />
		<span class="description"><%= label_name('conditions') %></span>
	</div>

  </div> 

  <div class="column right"> 

	<div class="group">
		<%= f.label :photo, label_name('photo'), :class => :label %>
		<%= f.file_field :photo, :class => 'textphoto' %><br />
		<span class="description"><%= label_name('photo', 'description') %></span>
	</div>

	<div class="group">
		<%= f.label :fee_per_game, label_name('fee_per_game_time'), :class => :label %>
		<%= f.text_field :fee_per_game, :class => 'textscore' %><br />
		<span class="description"><%= label_name('fee_per_game_time', 'description') %></span>
	</div>

	<div class="group">
		<%= f.label :fee_per_lighting, label_name('fee_per_lighting'), :class => :label %>
		<%= f.text_field :fee_per_lighting, :class => 'textscore' %><br />
		<span class="description"><%= label_name('fee_per_lighting', 'description') %></span>
	</div>

	<div class="group">
		<%= f.label :public, label_name('public'), :class => :label %>
		<%= f.check_box :public, :class => 'check_box' %>
		<span class="description"><%= label_name('public', 'description') %></span>
	</div>

	<div class="group">
		<%= f.label :lighting, label_name('lighting'), :class => :label %>
		<%= f.check_box :lighting, :class => 'check_box' %>
		<span class="description"><%= label_name('lighting', 'description') %></span>
	</div>

	<div class="group">
		<%= f.label :outdoor, label_name('outdoor'), :class => :label %>
		<%= f.check_box :outdoor, :class => 'check_box' %>
		<span class="description"><%= label_name('outdoor', 'description') %></span>
	</div>

  </div> 

</div>
<%= f.hidden_field :venue_id %>

<div class="clear"></div> 

<div class="group navform">
	<%= submit_tag @installation.new_record? ? control_label('create') : control_label('edit'), 
			:class => "button" %> <%= label_name(:or) %> <%= link_to label_name(:cancel), installations_path %>
</div>
