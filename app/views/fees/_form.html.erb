<div class="columns"> 

	  <div class="column left"> 	

		<div class="group">
		  <%= f.label :concept, label_name('concept'), :class => :label %>
		  <%= f.text_field :concept, :class => 'text_field' %><br />
		  <span class="description"><%= label_name('concept', 'description') %></span>
		</div>

		<div class="group">
			<%= f.label :debit_amount, label_name('debit_amount'), :class => :label %>
			<%= f.text_field :debit_amount, :class => 'textscore' %><br />
			<span class="description"><%= label_name('debit_amount', 'description') %></span>
		</div>

		<div class="group">
		  <%= f.label :description, label_name('description'), :class => :label %>
		  <%= f.text_area :description, :class => 'text_area' %><br />
		  <span class="description"><%= label_name('description') %></span>
		</div>

	</div> 

	<div class="column right"> 

	<% if @fee.new_record? %>
		<fieldset id="roster">
		<%= render :partial => '/messages/recipient_list', 
		:locals => {:label => label_name(:roster), :recipients => @group.users, :checked => true } %>
		</fieldset>
		
		<br /><br />
		
		<div class="group">
			<%= render :partial => '/shared/check_radio_button' unless @recipient %>
		</div>
	<% end -%>
	
	</div>

</div>

<div class="clear"></div> 

<div class="group navform">
	<%= submit_tag @fee.new_record? ? control_label('create') : control_label('edit'), 
			:class => "button" %> <%= label_name(:or) %> <%= link_to label_name(:cancel), fees_path %>
</div>