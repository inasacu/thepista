<div class="block"> 

  <%= render :partial => '/users/secondary_navigation' %>
          
  <div class="content">  
	        
    <h2 class="title"><%= get_collection_label(@fees) %></h2>

    <div class="inner">
	
	<% if object_counter(@fees) > 0 %>
	
      <table class="table">
	
        <tr>            
          <th class="first">&nbsp;</th>
          <th><%= label_name(:from) %>&nbsp;,&nbsp;<%= label_name(:to) %><br />
			  <%= label_name(:created_at) %>
		  </th>
          <th><%= label_name(:concept) %></th>
          <th><%= label_name(:debit) %></th>
          <th><%= label_name(:credit) %></th>
          <th class="last">&nbsp;</th>
        </tr>

		<%= render :partial => 'fee', :collection => @fees %>

		<tr>  
			<td>&nbsp;</td>
			<td>&nbsp;</td>
			<td>&nbsp;</td>
			<td align="left">
				<%= "#{label_name(:debit_total)}:  #{number_to_currency(@debit_fee.debit_amount.to_f)}" %>
			</td>
			<td align="left"><%= @debit_payment.actual_payment %>
				<%= "#{label_name(:credit_total)}:  #{number_to_currency(@debit_payment.actual_payment.to_f)}" %>
			</td>
		   <td class="last"></td>
		</tr>

      </table>

	<% end %>
	<%= render :partial => 'shared/action_bar', :locals => { :collection => @fees } %>

	</div>
	</div>
</div>

<% content_for :sidebar, render(:partial => '/fees/sidebar_show_team') if current_user.has_role?('manager') %>