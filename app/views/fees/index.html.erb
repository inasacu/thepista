<%
	the_label = label_name(:fees)
	content_for(:title, the_label)
%>

<div class="block">

  <%= render :partial => '/users/secondary_navigation' if is_action('index') %>
  <%= render :partial => '/groups/secondary_navigation' if is_action('list') or is_action('complete') %>
  <%= render :partial => '/challenges/secondary_navigation' if @challenge %>
          
  <div class="content">  
	        
    <h2 class="title"><%= get_collection_label(@fees) %></h2>

    <div class="inner">
	
	<% if object_counter(@fees) > 0 %>
	
      <table class="table">
	
        <tr>            
          <th class="first">&nbsp;</th>
          <th><%= label_name(:from) %>,&nbsp;&nbsp;<%= label_name(:to) %><br />
			  <%= label_name(:created_at) %>
		  </th>
          <th><%= label_name(:concept) %></th>
          <th><%= label_name(:debit) %></th>
          <th><%= label_name(:credit) %></th>
          <th class="last">&nbsp;</th>
        </tr>

		<%= render :partial => 'fees/fee', :collection => @fees %>
		<%= render :partial => 'payments/payment', :collection => @payments unless @challenge %>

		<tr>  
			<td>&nbsp;</td>
			<td>&nbsp;</td>
			<td>&nbsp;</td>
			<td align="left">
				<%= "#{label_name(:debit_total)}:  #{number_to_currency(@debit_fee.debit_amount.to_f)}" %>
			</td>
			<td align="left">
				<%= "#{label_name(:credit_total)}:  #{number_to_currency(@debit_payment.debit_amount.to_f + @credit_payment.credit_amount.to_f)}" %>
			</td>
		   <td class="last"></td>
		</tr>

      </table>

	<% end %>
	<%= render :partial => 'shared/action_bar', :locals => { :collection => @fees } %>

	</div>
	</div>
</div>
