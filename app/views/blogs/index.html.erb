<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', blogs_path %></li>
      <li><%= link_to 'New', new_blog_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Blogs</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>Name</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @blogs.each do |blog| -%>
        <tr>
          <td>
            <%= blog.id %>
          </td>
          <td>
            <%= link_to blog.name, blog_path(blog) %>
          </td>
          <td>
            <%= blog.created_at %>
          </td>
          <td class="last">
            <%= link_to 'show', blog_path(blog) %> |
            <%= link_to 'edit', edit_blog_path(blog) %> |
            <%= link_to 'destroy', blog_path(blog), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @blog  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>